---
import Layout from '../layouts/BaseLayout.astro'
import Container from '../components/containers/Container.astro'
import Button from '../components/partials/Button.astro'
---

<Layout
  title="Page Not Found | Chris Lloyd-Jones"
  description="The page you're looking for doesn't exist."
>
  <Container>
    <div class="not-found">
      <p class="not-found__code">404</p>
      <h1 class="not-found__message">This page has wandered off</h1>
      <p class="not-found__hint">The page you're looking for doesn't exist or has been moved.</p>
      <Button variant="primary" href="/">Go home</Button>
    </div>
  </Container>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof plausible !== 'undefined') {
        plausible('404', { props: { path: document.location.pathname } })
      }
    })
  </script>
</Layout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: calc(100vh - 200px);
    padding: 2rem 0;
  }

  .not-found__code {
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.04em;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (min-width: 768px) {
    .not-found__code {
      font-size: 12rem;
    }
  }

  .not-found__message {
    font-family: 'Source Serif 4', Georgia, 'Times New Roman', serif;
    font-size: 1.5rem;
    line-height: 1.4;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  @media (min-width: 768px) {
    .not-found__message {
      font-size: 1.875rem;
    }
  }

  .not-found__hint {
    font-family: 'Source Serif 4', Georgia, 'Times New Roman', serif;
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-text-subtle);
    margin-bottom: 2rem;
  }
</style>
