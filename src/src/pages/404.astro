---
import Layout from '../layouts/BaseLayout.astro'
import Container from '../components/containers/Container.astro'
import Button from '../components/partials/Button.astro'
---

<Layout
  title="Page Not Found | Chris Lloyd-Jones"
  description="The page you're looking for doesn't exist."
>
  <Container>
    <div class="not-found">
      <p class="not-found__code">404</p>
      <h1 class="not-found__message">This page has wandered off</h1>
      <p class="not-found__hint">The page you're looking for doesn't exist or has been moved.</p>
      <button type="button" class="not-found__search" onclick="document.dispatchEvent(new CustomEvent('open-search'))">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Search the site
      </button>
      <Button variant="primary" href="/">Go home</Button>
    </div>
  </Container>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof plausible !== 'undefined') {
        plausible('404', { props: { path: document.location.pathname } })
      }
    })
  </script>
</Layout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: calc(100vh - 200px);
    padding: 2rem 0;
  }

  .not-found__code {
    font-family: var(--font-heading);
    font-size: 8rem;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.04em;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (min-width: 768px) {
    .not-found__code {
      font-size: 12rem;
    }
  }

  .not-found__message {
    font-family: var(--font-body);
    font-size: 1.5rem;
    line-height: 1.4;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  @media (min-width: 768px) {
    .not-found__message {
      font-size: 1.875rem;
    }
  }

  .not-found__hint {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-text-subtle);
    margin-bottom: 2rem;
  }

  .not-found__search {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    max-width: 320px;
    padding: 12px 16px;
    margin-bottom: 1rem;
    border: 1px solid var(--color-border-strong);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: 0.875rem;
    cursor: pointer;
    transition: border-color var(--duration-fast) var(--ease-out);
  }

  .not-found__search:hover {
    border-color: var(--color-primary);
  }

  .not-found__search:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>
