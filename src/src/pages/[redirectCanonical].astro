---
import { legacyRedirectSlugs } from '../data/legacy-redirects'

export function getStaticPaths() {
  return legacyRedirectSlugs.map((url) => {
    return {
      params: {
        redirectCanonical: url,
      },
    };
  });
}

const { redirectCanonical } = Astro.params;
---

<head>
  <meta http-equiv="refresh" content={`0; url=/blog/${redirectCanonical}`} />
</head>
