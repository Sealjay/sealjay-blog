---
import Layout from '../layouts/BaseLayout.astro'
import Container from '../components/containers/Container.astro'
import PageHeader from '../components/partials/PageHeader.astro'
import { getCollection } from 'astro:content'

const acknowledgements = await getCollection('acknowledgement')
---

<Layout
  title="Colophon"
  description="The open-source projects, tools, and resources this site is built with"
  pubDateTime={new Date('11 May 2023')}
  updatedDate={new Date('17 February 2026')}
>
  <Container>
    <PageHeader
      title="Colophon"
      subtitle="This site was built using a collection of open source projects, tools, knowledge, and articles. I've tried to cite and reference all of them here. If I'm missing you, please let me know!"
      breadcrumbs={[
        { label: 'Home', href: '/' },
        { label: 'Colophon' },
      ]}
      center={false}
    >
      <p class="colophon-source-link">
        The <a href="https://github.com/Sealjay/sealjay-blog" target="_blank" rel="noopener noreferrer">source code</a> is available on GitHub.
      </p>
    </PageHeader>

    <div class="ack-grid">
      {acknowledgements.map((acknowledgement) => (
        <div class="ack-card">
          <div class="ack-card__header">
            <img
              class="ack-card__icon"
              src={`/images/acknowledgements/${acknowledgement.data.image}`}
              alt={acknowledgement.data.title}
            />
            <span class="ack-card__title">
              {acknowledgement.data.title}
            </span>
          </div>
          <p class="ack-card__description">
            {acknowledgement.data.description}
          </p>
          {acknowledgement.data.notes && (
            <p class="ack-card__notes">
              {acknowledgement.data.notes}
            </p>
          )}
          <div class="ack-card__footer">
            <div class="ack-card__licence">
              <span>Licence:</span>
              <a href={acknowledgement.data.licenceUrl}>
                {acknowledgement.data.licence}
              </a>
            </div>
            {acknowledgement.data.url && (
              <a
                href={acknowledgement.data.url}
                target="_blank"
                rel="noopener noreferrer"
                class="ack-card__link"
              >
                Visit project
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>

    <div class="ack-trademark">
      <p>
        Sealjay&reg; is a <a href="https://trademarks.ipo.gov.uk/ipo-tmcase/page/Results/1/UK00003592625" target="_blank" rel="noopener noreferrer">registered trademark</a> of Chris Lloyd-Jones.
      </p>
    </div>
  </Container>
</Layout>

<style>
  .colophon-source-link {
    margin-top: 0.75rem;
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-text-muted);
  }

  .colophon-source-link a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .colophon-source-link a:hover {
    text-decoration: underline;
  }

  .ack-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .ack-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .ack-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .ack-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--color-card-glow);
    overflow: hidden;
    transition: border-color var(--duration-normal) var(--ease-out),
                transform var(--duration-normal) var(--ease-out);
  }

  .ack-card:hover {
    border-color: var(--color-border-strong);
    transform: translateY(-2px);
  }

  .ack-card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--color-bg-alt);
  }

  .ack-card__icon {
    width: 2rem;
    height: 2rem;
    flex-shrink: 0;
  }

  .ack-card__title {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text);
  }

  .ack-card__description {
    padding: 0.75rem 1rem 0;
    font-family: var(--font-body);
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    flex-grow: 1;
  }

  .ack-card__notes {
    padding: 0.25rem 1rem 0;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--color-text-subtle);
  }

  .ack-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    margin-top: auto;
    border-top: 1px solid var(--color-border);
  }

  .ack-card__licence {
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .ack-card__licence a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .ack-card__licence a:hover {
    text-decoration: underline;
  }

  .ack-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-family: var(--font-heading);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: background var(--duration-fast) var(--ease-out);
  }

  .ack-card__link:hover {
    background: var(--color-primary-muted);
  }

  .ack-card__link svg {
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .ack-card:hover .ack-card__link svg {
    transform: translateX(4px);
  }

  .ack-trademark {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .ack-trademark p {
    font-size: 0.75rem;
    color: var(--color-text-subtle);
  }

  .ack-trademark a {
    color: var(--color-text-subtle);
    text-decoration: underline;
    text-decoration-color: var(--color-border);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .ack-trademark a:hover {
    color: var(--color-text-muted);
  }
</style>
