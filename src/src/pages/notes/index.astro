---
import Layout from '../../layouts/BaseLayout.astro'
import Container from '../../components/containers/Container.astro'
import PageHeader from '../../components/partials/PageHeader.astro'
import { getCollection } from 'astro:content'
import FormattedDate from '../../components/partials/FormattedDate.astro'
import Mastodon from '../../components/socialicons/Mastodon.astro'

const notes = (await getCollection('note')).sort(
  (b, a) => a.data.pubDateTime.valueOf() - b.data.pubDateTime.valueOf()
)
const lastNoteDate = notes.length > 0 ? new Date(notes[0].data.pubDateTime) : new Date()

// Group notes by date (YYYY-MM-DD)
const notesByDate = new Map<string, typeof notes>()
for (const note of notes) {
  const dateKey = note.data.pubDateTime.toISOString().slice(0, 10)
  if (!notesByDate.has(dateKey)) {
    notesByDate.set(dateKey, [])
  }
  notesByDate.get(dateKey)!.push(note)
}

// Sort notes within each day oldest-first (earliest at top)
for (const dayNotes of notesByDate.values()) {
  dayNotes.sort((a, b) => a.data.pubDateTime.valueOf() - b.data.pubDateTime.valueOf())
}

// Find day summary for each date group (from any note that has one)
function getDaySummary(dayNotes: typeof notes): string | undefined {
  for (const n of dayNotes) {
    if (n.data.daySummary) return n.data.daySummary
  }
  return undefined
}
---

<Layout
  title="Notes"
  description="Quick thoughts, links, and things I find interesting."
  pubDateTime={new Date('1 March 2023')}
  updatedDate={lastNoteDate}
>
  <Container>
    <PageHeader
      title="Notes"
      subtitle="short thoughts, links, and observations"
      center={false}
      breadcrumbs={[
        { label: 'Home', href: '/' },
        { label: 'Notes' },
      ]}
    />

    <div class="notes-feed">
      {/* Timeline */}
      <div class="h-feed notes-timeline">
        {[...notesByDate.entries()].map(([dateKey, dayNotes]) => {
          const dateObj = new Date(dateKey + 'T00:00:00Z')
          const daySummary = getDaySummary(dayNotes)
          return (
            <div class="notes-day">
              {/* Date header */}
              <div class="notes-day__header">
                <div class="notes-day__dot" />
                <h2 class="notes-day__date font-heading">
                  <a href={`/notes/${dateKey}/`} class="notes-day__date-link">
                    <FormattedDate date={dateObj} />
                  </a>
                </h2>
                {daySummary && dayNotes.length > 1 && (
                  <p class="notes-day__summary">
                    <span class="notes-day__summary-label">AI summary</span> — {daySummary}
                  </p>
                )}
              </div>

              {/* Notes for this day */}
              <div class="notes-day__items">
                {dayNotes.map((note) => (
                  <div
                    id={note.slug}
                    class:list={[
                      'h-entry note-card scroll-mt-20',
                      note.data.isHighlight && 'note-card--highlight',
                      note.data.inReplyTo && 'note-card--reply',
                    ]}
                  >
                    {/* Top row: time + highlight badge */}
                    <div class="note-card__meta">
                      <a
                        href={`/notes/${dateKey}/#${note.slug}`}
                        class="note-card__time"
                      >
                        {note.data.pubDateTime.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit', hour12: false })}
                      </a>
                      {note.data.isHighlight && (
                        <span class="note-card__highlight-badge">Highlight</span>
                      )}
                      {note.data.inReplyTo && (
                        <a
                          href={note.data.inReplyTo}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="note-card__reply-indicator"
                          title={`Reply to ${note.data.inReplyTo}`}
                        >
                          <svg xmlns="http://www.w3.org/2000/svg" class="note-card__reply-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
                          </svg>
                          <span>reply</span>
                        </a>
                      )}
                    </div>

                    {/* Title (optional) */}
                    {note.data.title && (
                      <h3 class="note-card__title font-heading">
                        <a
                          href={`/notes/${dateKey}/#${note.slug}`}
                          class="note-card__title-link"
                        >
                          {note.data.title}
                        </a>
                      </h3>
                    )}

                    {/* Description / body preview */}
                    {note.data.description && (
                      <p class="note-card__desc">{note.data.description}</p>
                    )}

                    {/* Bottom row: tags + external link */}
                    <div class="note-card__tags">
                      {note.data.tags && note.data.tags.length > 0 && (
                        note.data.tags.map((tag: string) => (
                          <span class="p-category note-card__tag">#{tag}</span>
                        ))
                      )}

                      {note.data.externalUrl && (
                        <a
                          href={note.data.externalUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="note-card__external-link"
                        >
                          <svg xmlns="http://www.w3.org/2000/svg" class="note-card__external-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                          {note.data.externalPlatform || 'Link'}
                        </a>
                      )}

                      {note.data.mastodonUrl && (
                        <a
                          href={note.data.mastodonUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="note-card__mastodon-link"
                          title="View on Mastodon"
                        >
                          <Mastodon class="h-4 w-4" />
                          <span class="sr-only">View on Mastodon</span>
                        </a>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )
        })}
      </div>

      {notes.length === 0 && (
        <p class="notes-empty">No notes yet. Check back soon!</p>
      )}
    </div>
  </Container>
</Layout>

<style>
  /* ── Layout ────────────────────────────────────────────────── */
  .notes-feed {
    max-width: 48rem; /* 768px — readable text column, wider than old 560px */
    margin: 0 auto;
    padding-bottom: 3rem;
  }

  /* ── Timeline ──────────────────────────────────────────────── */

  /* Single variable for the timeline axis centre */
  .notes-timeline {
    --timeline-x: 9px;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Vertical timeline line - gradient fades at both ends */
  .notes-timeline::before {
    content: '';
    position: absolute;
    left: calc(var(--timeline-x) - 1px);
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      transparent,
      var(--color-border-strong) 2rem,
      var(--color-border-strong) calc(100% - 2rem),
      transparent
    );
  }

  /* ── Day group ─────────────────────────────────────────────── */
  .notes-day__header {
    position: relative;
    padding-left: 2.5rem;
    margin-bottom: 1rem;
  }

  /* Day dot - hollow "journal marker" ring */
  .notes-day__dot {
    position: absolute;
    left: calc(var(--timeline-x) - 6px);
    top: 0.25rem;
    width: 12px;
    height: 12px;
    border-radius: var(--radius-full);
    background: var(--color-bg);
    border: 2px solid var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-bg);
  }

  .notes-day__date {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin: 0;
  }

  .notes-day__date-link {
    color: inherit;
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .notes-day__date-link:hover {
    color: var(--color-primary);
  }

  .notes-day__summary {
    margin-top: 0.25rem;
    font-size: 0.8125rem;
    font-family: var(--font-heading);
    color: var(--color-text-subtle);
  }

  .notes-day__summary-label {
    font-weight: 500;
    color: var(--color-text-subtle);
  }

  .notes-day__items {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* ── Note card (consolidated) ──────────────────────────────── */
  .note-card {
    position: relative;
    padding: 1rem 1rem 1rem 2.5rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--color-card-glow);
    transition:
      border-color var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out),
      transform var(--duration-normal) var(--ease-out);
  }

  .note-card:hover {
    border-color: var(--color-border-strong);
    box-shadow: var(--color-card-glow), var(--color-card-glow-hover);
    transform: translateY(-1px);
  }

  /* Note dot - small filled circle on the timeline axis */
  .note-card::before {
    content: '';
    position: absolute;
    left: calc(var(--timeline-x) - 3px);
    top: 1rem;
    width: 6px;
    height: 6px;
    border-radius: var(--radius-full);
    background: var(--color-border-strong);
    transition: background var(--duration-fast) var(--ease-out);
  }

  .note-card:hover::before {
    background: var(--color-primary);
  }

  /* ── Card variants ─────────────────────────────────────────── */

  /* Highlighted notes */
  .note-card--highlight {
    border-left: 3px solid var(--color-warm);
    padding-left: calc(2.5rem - 3px);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-warm) 3%, var(--color-surface)),
      var(--color-surface) 60%
    );
  }

  /* Reply notes */
  .note-card--reply {
    margin-left: 0.75rem;
    background: var(--color-bg);
    box-shadow: none;
  }

  /* ── Card inner elements ───────────────────────────────────── */
  .note-card__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .note-card__time {
    font-family: var(--font-code);
    font-size: 0.8125rem;
    color: var(--color-text-subtle);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .note-card__time:hover {
    color: var(--color-primary);
  }

  .note-card__highlight-badge {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    padding: 2px 8px;
    font-family: var(--font-heading);
    font-size: 0.6875rem;
    font-weight: 500;
    background: var(--color-warm-muted);
    color: var(--color-warm);
    border: 1px solid color-mix(in srgb, var(--color-warm) 30%, transparent);
  }

  .note-card__reply-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .note-card__reply-indicator:hover {
    color: var(--color-primary);
  }

  .note-card__reply-icon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .note-card__title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.25rem;
    overflow-wrap: break-word;
  }

  .note-card__title-link {
    color: inherit;
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .note-card__title-link:hover {
    color: var(--color-primary);
  }

  .note-card__desc {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0 0 0.75rem;
    overflow-wrap: break-word;
  }

  .note-card__tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }

  .note-card__tag {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    padding: 2px 8px;
    font-family: var(--font-heading);
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--color-bg-alt);
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
  }

  .note-card__external-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    border-radius: var(--radius-full);
    padding: 2px 8px;
    font-family: var(--font-heading);
    font-size: 0.6875rem;
    font-weight: 500;
    background: var(--color-bg-alt);
    color: var(--color-primary);
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition:
      background var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out);
  }

  .note-card__external-link:hover {
    background: var(--color-primary-muted);
    border-color: var(--color-border-strong);
  }

  .note-card__external-icon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .note-card__mastodon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-subtle);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .note-card__mastodon-link:hover {
    color: var(--color-primary);
  }

  .notes-empty {
    text-align: center;
    color: var(--color-text-muted);
    padding: 3rem 0;
  }

  /* ── Animations (respect motion preferences) ───────────────── */
  @media (prefers-reduced-motion: no-preference) {
    /* Staggered card fade-in on page load */
    .note-card {
      opacity: 0;
      animation: noteAppear 400ms var(--ease-out) forwards;
    }

    .notes-day__items .note-card:nth-child(1) { animation-delay: 0ms; }
    .notes-day__items .note-card:nth-child(2) { animation-delay: 60ms; }
    .notes-day__items .note-card:nth-child(3) { animation-delay: 120ms; }
    .notes-day__items .note-card:nth-child(4) { animation-delay: 180ms; }
    .notes-day__items .note-card:nth-child(5) { animation-delay: 240ms; }
    .notes-day__items .note-card:nth-child(6) { animation-delay: 300ms; }
    .notes-day__items .note-card:nth-child(7) { animation-delay: 360ms; }
    .notes-day__items .note-card:nth-child(8) { animation-delay: 420ms; }

    @keyframes noteAppear {
      from {
        opacity: 0;
        transform: translateY(8px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Latest day dot pulse */
    .notes-day:first-child .notes-day__dot {
      animation: dotPulse 2s var(--ease-out) infinite;
    }

    @keyframes dotPulse {
      0%, 100% {
        box-shadow: 0 0 0 3px var(--color-bg), 0 0 0 3px var(--color-primary-muted);
      }
      50% {
        box-shadow: 0 0 0 3px var(--color-bg), 0 0 0 8px transparent;
      }
    }
  }
</style>
