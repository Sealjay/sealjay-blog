---
import Layout from '../../layouts/BaseLayout.astro'
import Container from '../../components/containers/Container.astro'
import PageHeader from '../../components/partials/PageHeader.astro'
import FormattedDate from '../../components/partials/FormattedDate.astro'
import { getShorts } from '../../lib/youtube'
import { youtubeShorts } from '../../config/personal'

const shorts = await getShorts(youtubeShorts)

const latestDate = shorts.length > 0 ? shorts[0].published : new Date()
---

<Layout
  title="Shorts"
  description="Short-form videos on AI, security, and open source."
  pubDateTime={new Date('1 March 2023')}
  updatedDate={latestDate}
>
  <Container>
    <PageHeader
      title="Shorts"
      subtitle="Short-form videos on AI, security, and open source."
      center={false}
    />

    {shorts.length === 0 ? (
      <p class="shorts-empty">No shorts available yet.</p>
    ) : (
      <div class="shorts-grid">
        {shorts.map((short) => (
          <a
            href={short.youtubeUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="short-card group"
          >
            {/* Thumbnail with play overlay */}
            <div class="short-card__thumbnail">
              <img
                src={short.thumbnailUrl}
                alt=""
                width="480"
                height="270"
                loading="lazy"
                decoding="async"
                class="short-card__img"
              />
              {/* Play icon overlay */}
              <div class="short-card__play-overlay">
                <div class="short-card__play-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" class="short-card__play-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d="M8 5v14l11-7z" />
                  </svg>
                </div>
              </div>
              {/* Source badge */}
              <div class="short-card__source-badge">Short</div>
            </div>

            {/* Card body */}
            <div class="short-card__body">
              <h3 class="short-card__title font-heading">{short.title}</h3>

              <div class="short-card__meta">
                <FormattedDate date={short.published} />
                <span class="short-card__dot">&middot;</span>
                <span class="short-card__source-text">{short.source}</span>
              </div>

              {/* Tags */}
              {short.tags.length > 0 && (
                <div class="short-card__tags">
                  {short.tags.slice(0, 4).map((tag) => (
                    <span class="short-card__tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    )}
  </Container>
</Layout>

<style>
  .shorts-empty {
    color: var(--color-text-muted);
  }

  .shorts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .shorts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .shorts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .short-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--color-card-glow);
    overflow: hidden;
    text-decoration: none;
    transition: border-color var(--duration-normal) var(--ease-out),
                transform var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out);
  }

  .short-card:hover {
    border-color: var(--color-border-strong);
    transform: translateY(-2px);
  }

  .short-card__thumbnail {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-bg-alt);
  }

  .short-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }

  .short-card:hover .short-card__img {
    transform: scale(1.05);
  }

  .short-card__play-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .short-card__play-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: var(--radius-full);
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    transition: background var(--duration-normal) var(--ease-out);
  }

  .short-card:hover .short-card__play-btn {
    background: var(--color-danger);
  }

  .short-card__play-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #ffffff;
    margin-left: 2px;
  }

  .short-card__source-badge {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    padding: 2px 8px;
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    background: color-mix(in srgb, var(--color-danger) 15%, transparent);
    color: var(--color-danger);
    border: 1px solid color-mix(in srgb, var(--color-danger) 30%, transparent);
    backdrop-filter: blur(8px);
  }

  .short-card__body {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 1rem;
  }

  .short-card__title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .short-card:hover .short-card__title {
    color: var(--color-primary);
  }

  .short-card__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    margin-bottom: 0.75rem;
  }

  .short-card__dot {
    color: var(--color-border-strong);
  }

  .short-card__source-text {
    color: var(--color-text-subtle);
  }

  .short-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: auto;
  }

  .short-card__tag {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    padding: 2px 8px;
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    background: var(--color-bg-alt);
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
  }
</style>
