---
import Layout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
import { format } from 'date-fns'
import FormattedDate from '../../components/partials/FormattedDate.astro'
import { getShorts } from '../../lib/youtube'
import { youtubeShorts } from '../../config/personal'

interface NoteDetail {
  description: string
  title: string
  time: string
  hasExternalLink: boolean
  externalUrl: string
  url: string
}

interface StreamItem {
  type: 'article' | 'talk' | 'note' | 'project' | 'short'
  title: string
  description: string
  date: Date
  url: string
  tags: string[]
  noteItems?: NoteDetail[]
  thumbnailUrl?: string
}

const blogEntries = await getCollection('blog')
const speakingEntries = await getCollection('speaking')
const noteEntries = await getCollection('note')
const projectEntries = await getCollection('project')
const shorts = await getShorts(youtubeShorts)

const blogItems: StreamItem[] = blogEntries.map((entry) => ({
  type: 'article',
  title: entry.data.title,
  description: entry.data.description ?? '',
  date: new Date(entry.data.pubDateTime),
  url: `/blog/${entry.slug}/`,
  tags: entry.data.tags ?? [],
}))

const speakingItems: StreamItem[] = speakingEntries.map((entry) => ({
  type: 'talk',
  title: entry.data.title,
  description: `${entry.data.event} - ${entry.data.eventType}`,
  date: new Date(entry.data.date),
  url: entry.data.url,
  tags: [],
}))

// Group notes by day and emit one stream item per day
const notesByDay = new Map<string, typeof noteEntries>()
for (const entry of noteEntries) {
  const dateKey = new Date(entry.data.pubDateTime).toISOString().slice(0, 10)
  if (!notesByDay.has(dateKey)) notesByDay.set(dateKey, [])
  notesByDay.get(dateKey)!.push(entry)
}

const noteGroupItems: StreamItem[] = [...notesByDay.entries()].map(([dateKey, dayNotes]) => {
  const sorted = [...dayNotes].sort((a, b) => a.data.pubDateTime.valueOf() - b.data.pubDateTime.valueOf())
  const daySummary = sorted.find((n) => n.data.daySummary)?.data.daySummary
  return {
    type: 'note' as const,
    title: sorted.length === 1 ? (sorted[0].data.title ?? 'Note') : `${sorted.length} Notes`,
    description: daySummary ?? sorted.map((n) => n.data.title ?? n.data.description).filter(Boolean).join(', '),
    date: new Date(sorted[0].data.pubDateTime),
    url: `/notes/${dateKey}/`,
    tags: [],
    noteItems: sorted.map((n) => ({
      description: n.data.description ?? '',
      title: n.data.title ?? '',
      time: new Date(n.data.pubDateTime).toLocaleTimeString('en-GB', {
        hour: '2-digit',
        minute: '2-digit',
        hour12: false,
      }),
      hasExternalLink: !!n.data.externalUrl,
      externalUrl: n.data.externalUrl ?? '',
      url: `/notes/${dateKey}/#${n.slug}`,
    })),
  }
})

const projectItems: StreamItem[] = projectEntries.map((entry) => ({
  type: 'project',
  title: entry.data.title,
  description: entry.data.description ?? '',
  date: new Date(entry.data.date),
  url: entry.data.repoUrl,
  tags: entry.data.tags ?? [],
}))

const shortItems: StreamItem[] = shorts.map((short) => ({
  type: 'short',
  title: short.title,
  description: short.source,
  date: short.published,
  url: short.youtubeUrl,
  tags: short.tags,
  thumbnailUrl: short.thumbnailUrl,
}))

const allItems: StreamItem[] = [...blogItems, ...speakingItems, ...noteGroupItems, ...projectItems, ...shortItems].sort(
  (a, b) => b.date.valueOf() - a.date.valueOf(),
)

const groupedItems = allItems.reduce<Record<string, StreamItem[]>>((acc, item) => {
  const key = format(item.date, 'yyyy-MM')
  acc[key] = [...(acc[key] || []), item]
  return acc
}, {})

const monthNames = [
  'January',
  'February',
  'March',
  'April',
  'May',
  'June',
  'July',
  'August',
  'September',
  'October',
  'November',
  'December',
]

const latestDate = allItems.length > 0 ? allItems[0].date : new Date()

const badgeClasses: Record<StreamItem['type'], string> = {
  article: 'bg-blue-100 text-blue-700 dark:bg-blue-900/40 dark:text-blue-300',
  talk: 'bg-orange-100 text-orange-700 dark:bg-orange-900/40 dark:text-orange-300',
  note: 'bg-emerald-100 text-emerald-700 dark:bg-emerald-900/40 dark:text-emerald-300',
  project: 'bg-violet-100 text-violet-700 dark:bg-violet-900/40 dark:text-violet-300',
  short: 'bg-red-100 text-red-700 dark:bg-red-900/40 dark:text-red-300',
}

const badgeLabels: Record<StreamItem['type'], string> = {
  article: 'Article',
  talk: 'Speaking',
  note: 'Note',
  project: 'Project',
  short: 'Short',
}
---

<Layout
  title="Stream"
  description="Everything in one place."
  pubDateTime={new Date('1 March 2023')}
  updatedDate={latestDate}
>
  <div class="mx-auto max-w-5xl">
    <!-- Page Header -->
    <div class="mb-10 md:mb-16">
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 mb-4">
        <span class="text-gradient">Stream</span>
      </h1>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 max-w-3xl">
        Everything in one place.
      </p>
    </div>

    <!-- Filter Pills -->
    <div class="mb-8 flex flex-wrap gap-2" id="stream-filters">
      <button
        data-filter="all"
        class="stream-filter-btn active inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors bg-zinc-800 text-white dark:bg-zinc-100 dark:text-zinc-900"
      >
        All
      </button>
      <button
        data-filter="article"
        class="stream-filter-btn inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors bg-zinc-100 text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700"
      >
        Articles
      </button>
      <button
        data-filter="talk"
        class="stream-filter-btn inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors bg-zinc-100 text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700"
      >
        Speaking
      </button>
      <button
        data-filter="note"
        class="stream-filter-btn inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors bg-zinc-100 text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700"
      >
        Notes
      </button>
      <button
        data-filter="project"
        class="stream-filter-btn inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors bg-zinc-100 text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700"
      >
        Projects
      </button>
      <button
        data-filter="short"
        class="stream-filter-btn inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium transition-colors bg-zinc-100 text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700"
      >
        Shorts
      </button>
    </div>

    <!-- Stream Items Grouped by Month -->
    {Object.entries(groupedItems).map(([monthYear, items]) => (
      <div class="mb-12 md:mb-16 stream-month-group" data-month={monthYear}>
        <h2 class="mb-6 text-xl sm:text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 flex items-center">
          <span class="inline-block w-1 h-6 bg-accent-500 dark:bg-accent-400 mr-3 rounded-full" />
          {monthNames[parseInt(monthYear.split('-')[1]) - 1]} {monthYear.split('-')[0]}
        </h2>
        <div class="flex flex-col gap-3">
          {items.map((item) => {
            const isExternal = item.type === 'talk' || item.type === 'project' || item.type === 'short'

            {/* Notes: grouped bullet format under date header */}
            if (item.type === 'note' && item.noteItems) {
              return (
                <div
                  class="stream-item rounded-xl bg-white/90 dark:bg-zinc-800/70 backdrop-blur ring-1 ring-zinc-200/60 dark:ring-zinc-700/40 px-4 py-3 shadow-sm"
                  data-type="note"
                >
                  {/* Header: Note badge + date + link */}
                  <div class="flex items-center gap-3 mb-2">
                    <span class={`shrink-0 inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${badgeClasses.note}`}>
                      {item.noteItems && item.noteItems.length > 1 ? 'Notes' : 'Note'}
                    </span>
                    <span class="text-xs text-zinc-500 dark:text-zinc-400">
                      <FormattedDate date={item.date} />
                    </span>
                    <a
                      href={item.url}
                      class="ml-auto text-xs text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 font-medium transition-colors flex items-center gap-0.5"
                    >
                      View all
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                  {/* Individual notes as bullet list */}
                  <div class="flex flex-col gap-0.5">
                    {item.noteItems.map((note) => (
                      <div class="flex items-start gap-2 rounded-lg px-2 py-1.5 -mx-1">
                        <span class="text-zinc-400 dark:text-zinc-500 leading-5" aria-hidden="true">&#8226;</span>
                        <a
                          href={note.url}
                          class="flex-1 text-sm text-zinc-700 dark:text-zinc-300 hover:text-accent-600 dark:hover:text-accent-400 transition-colors truncate leading-5"
                        >
                          {note.description || note.title || 'Note'}
                        </a>
                        {note.hasExternalLink && note.externalUrl && (
                          <a
                            href={note.externalUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="shrink-0 text-accent-500 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors"
                            title="External link"
                          >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          </a>
                        )}
                        <span class="shrink-0 text-xs text-zinc-400 dark:text-zinc-500 tabular-nums leading-5">
                          @ {note.time}
                        </span>
                      </div>
                    ))}
                  </div>
                </div>
              )
            }

            {/* Other items: article, talk, project */}
            return (
              <a
                href={item.url}
                target={isExternal ? '_blank' : undefined}
                rel={isExternal ? 'noopener noreferrer' : undefined}
                class="stream-item group flex items-center gap-4 rounded-xl bg-white/90 dark:bg-zinc-800/70 backdrop-blur ring-1 ring-zinc-200/60 dark:ring-zinc-700/40 px-4 py-3 shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-0.5"
                data-type={item.type}
              >
                <!-- Type Badge -->
                <span class={`shrink-0 inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${badgeClasses[item.type]}`}>
                  {badgeLabels[item.type]}
                </span>

                <!-- Date -->
                <span class="shrink-0 text-xs text-zinc-500 dark:text-zinc-400 w-20 hidden sm:block">
                  <FormattedDate date={item.date} />
                </span>

                <!-- Title & Description -->
                <div class="min-w-0 flex-1">
                  <span class="text-sm font-semibold text-zinc-900 dark:text-zinc-100 group-hover:text-accent-600 dark:group-hover:text-accent-400 transition-colors">
                    {item.title}
                  </span>
                  {item.description && (
                    <p class="text-xs text-zinc-500 dark:text-zinc-400 truncate mt-0.5">
                      {item.description}
                    </p>
                  )}
                </div>

                <!-- Arrow Icon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="shrink-0 h-4 w-4 text-zinc-400 dark:text-zinc-500 transition-transform duration-200 group-hover:translate-x-0.5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            )
          })}
        </div>
      </div>
    ))}
  </div>
</Layout>

<script>
  function initStreamFilters() {
    const buttons = document.querySelectorAll<HTMLButtonElement>('.stream-filter-btn')
    const items = document.querySelectorAll<HTMLElement>('.stream-item')
    const monthGroups = document.querySelectorAll<HTMLElement>('.stream-month-group')

    const activeClass = 'bg-zinc-800 text-white dark:bg-zinc-100 dark:text-zinc-900'
    const inactiveClass =
      'bg-zinc-100 text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700'

    function setFilter(filter: string) {
      // Update button styles
      for (const btn of buttons) {
        const isActive = btn.dataset.filter === filter
        // Remove all variant classes first
        for (const cls of [...activeClass.split(' '), ...inactiveClass.split(' ')]) {
          btn.classList.remove(cls)
        }
        // Add the correct set
        for (const cls of (isActive ? activeClass : inactiveClass).split(' ')) {
          btn.classList.add(cls)
        }
      }

      // Show/hide items
      for (const item of items) {
        if (filter === 'all' || item.dataset.type === filter) {
          item.classList.remove('hidden')
        } else {
          item.classList.add('hidden')
        }
      }

      // Hide empty month groups
      for (const group of monthGroups) {
        const visibleItems = group.querySelectorAll('.stream-item:not(.hidden)')
        if (visibleItems.length === 0) {
          group.classList.add('hidden')
        } else {
          group.classList.remove('hidden')
        }
      }
    }

    for (const btn of buttons) {
      btn.addEventListener('click', () => {
        setFilter(btn.dataset.filter ?? 'all')
      })
    }
  }

  // Run on initial load and on Astro page transitions
  document.addEventListener('astro:page-load', initStreamFilters)
  initStreamFilters()
</script>
