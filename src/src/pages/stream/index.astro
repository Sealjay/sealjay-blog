---
import Layout from '../../layouts/BaseLayout.astro'
import Container from '../../components/containers/Container.astro'
import PageHeader from '../../components/partials/PageHeader.astro'
import { getCollection } from 'astro:content'
import { format } from 'date-fns'
import FormattedDate from '../../components/partials/FormattedDate.astro'
import { getShorts } from '../../lib/youtube'
import { youtubeShorts } from '../../config/personal'

interface NoteDetail {
  description: string
  title: string
  time: string
  hasExternalLink: boolean
  externalUrl: string
  url: string
}

interface StreamItem {
  type: 'article' | 'talk' | 'note' | 'project' | 'short'
  title: string
  description: string
  date: Date
  url: string
  tags: string[]
  noteItems?: NoteDetail[]
  thumbnailUrl?: string
}

const blogEntries = await getCollection('blog')
const speakingEntries = await getCollection('speaking')
const noteEntries = await getCollection('note')
const projectEntries = await getCollection('project')
const shorts = await getShorts(youtubeShorts)

const blogItems: StreamItem[] = blogEntries.map((entry) => ({
  type: 'article',
  title: entry.data.title,
  description: entry.data.description ?? '',
  date: new Date(entry.data.pubDateTime),
  url: `/blog/${entry.slug}/`,
  tags: entry.data.tags ?? [],
}))

const speakingItems: StreamItem[] = speakingEntries.map((entry) => ({
  type: 'talk',
  title: entry.data.title,
  description: `${entry.data.event} - ${entry.data.eventType}`,
  date: new Date(entry.data.date),
  url: entry.data.url,
  tags: [],
}))

// Group notes by day and emit one stream item per day
const notesByDay = new Map<string, typeof noteEntries>()
for (const entry of noteEntries) {
  const dateKey = new Date(entry.data.pubDateTime).toISOString().slice(0, 10)
  if (!notesByDay.has(dateKey)) notesByDay.set(dateKey, [])
  notesByDay.get(dateKey)!.push(entry)
}

const noteGroupItems: StreamItem[] = [...notesByDay.entries()].map(([dateKey, dayNotes]) => {
  const sorted = [...dayNotes].sort((a, b) => a.data.pubDateTime.valueOf() - b.data.pubDateTime.valueOf())
  const daySummary = sorted.find((n) => n.data.daySummary)?.data.daySummary
  return {
    type: 'note' as const,
    title: sorted.length === 1 ? (sorted[0].data.title ?? 'Note') : `${sorted.length} Notes`,
    description: daySummary ?? sorted.map((n) => n.data.title ?? n.data.description).filter(Boolean).join(', '),
    date: new Date(sorted[0].data.pubDateTime),
    url: `/notes/${dateKey}/`,
    tags: [],
    noteItems: sorted.map((n) => ({
      description: n.data.description ?? '',
      title: n.data.title ?? '',
      time: new Date(n.data.pubDateTime).toLocaleTimeString('en-GB', {
        hour: '2-digit',
        minute: '2-digit',
        hour12: false,
      }),
      hasExternalLink: !!n.data.externalUrl,
      externalUrl: n.data.externalUrl ?? '',
      url: `/notes/${dateKey}/#${n.slug}`,
    })),
  }
})

const projectItems: StreamItem[] = projectEntries.map((entry) => ({
  type: 'project',
  title: entry.data.title,
  description: entry.data.description ?? '',
  date: new Date(entry.data.date),
  url: entry.data.repoUrl,
  tags: entry.data.tags ?? [],
}))

const shortItems: StreamItem[] = shorts.map((short) => ({
  type: 'short',
  title: short.title,
  description: short.source,
  date: short.published,
  url: short.youtubeUrl,
  tags: short.tags,
  thumbnailUrl: short.thumbnailUrl,
}))

const allItems: StreamItem[] = [...blogItems, ...speakingItems, ...noteGroupItems, ...projectItems, ...shortItems].sort(
  (a, b) => b.date.valueOf() - a.date.valueOf(),
)

const groupedItems = allItems.reduce<Record<string, StreamItem[]>>((acc, item) => {
  const key = format(item.date, 'yyyy-MM')
  acc[key] = [...(acc[key] || []), item]
  return acc
}, {})

const monthNames = [
  'January',
  'February',
  'March',
  'April',
  'May',
  'June',
  'July',
  'August',
  'September',
  'October',
  'November',
  'December',
]

const latestDate = allItems.length > 0 ? allItems[0].date : new Date()

const badgeLabels: Record<StreamItem['type'], string> = {
  article: 'Article',
  talk: 'Speaking',
  note: 'Note',
  project: 'Project',
  short: 'Short',
}
---

<Layout
  title="Stream"
  description="Everything in one place."
  pubDateTime={new Date('1 March 2023')}
  updatedDate={latestDate}
>
  <Container>
    <PageHeader
      title="Stream"
      subtitle="Everything in one place."
      center={false}
    />

    {/* Filter Pills */}
    <div class="stream-filters" id="stream-filters">
      <button data-filter="all" class="stream-filter-btn stream-filter-btn--active">All</button>
      <button data-filter="article" class="stream-filter-btn">Articles</button>
      <button data-filter="talk" class="stream-filter-btn">Speaking</button>
      <button data-filter="note" class="stream-filter-btn">Notes</button>
      <button data-filter="project" class="stream-filter-btn">Projects</button>
      <button data-filter="short" class="stream-filter-btn">Shorts</button>
    </div>

    {/* Stream Items Grouped by Month */}
    {Object.entries(groupedItems).map(([monthYear, items]) => (
      <div class="stream-month" data-month={monthYear}>
        <h2 class="stream-month__heading font-heading">
          <span class="stream-month__bar" />
          {monthNames[parseInt(monthYear.split('-')[1]) - 1]} {monthYear.split('-')[0]}
        </h2>
        <div class="stream-month__items">
          {items.map((item) => {
            const isExternal = item.type === 'talk' || item.type === 'project' || item.type === 'short'

            {/* Notes: grouped bullet format under date header */}
            if (item.type === 'note' && item.noteItems) {
              return (
                <div
                  class="stream-item stream-note-group"
                  data-type="note"
                >
                  {/* Header: Note badge + date + link */}
                  <div class="stream-note-group__header">
                    <span class="stream-badge stream-badge--note">
                      <span class="stream-badge__dot stream-badge__dot--note" />
                      {item.noteItems && item.noteItems.length > 1 ? 'Notes' : 'Note'}
                    </span>
                    <span class="stream-item__date">
                      <FormattedDate date={item.date} />
                    </span>
                    <a href={item.url} class="stream-note-group__view-all">
                      View all
                      <svg xmlns="http://www.w3.org/2000/svg" class="stream-note-group__chevron" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                  {/* Individual notes as bullet list */}
                  <div class="stream-note-group__list">
                    {item.noteItems.map((note) => (
                      <div class="stream-note-group__item">
                        <span class="stream-note-group__bullet" aria-hidden="true">&#8226;</span>
                        <a href={note.url} class="stream-note-group__link">
                          {note.description || note.title || 'Note'}
                        </a>
                        {note.hasExternalLink && note.externalUrl && (
                          <a
                            href={note.externalUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="stream-note-group__external"
                            title="External link"
                          >
                            <svg xmlns="http://www.w3.org/2000/svg" class="stream-note-group__external-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          </a>
                        )}
                        <span class="stream-note-group__time">@ {note.time}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )
            }

            {/* Other items: article, talk, project, short */}
            return (
              <a
                href={item.url}
                target={isExternal ? '_blank' : undefined}
                rel={isExternal ? 'noopener noreferrer' : undefined}
                class="stream-item stream-item--link group"
                data-type={item.type}
              >
                {/* Type Badge with coloured dot */}
                <span class={`stream-badge stream-badge--${item.type}`}>
                  <span class={`stream-badge__dot stream-badge__dot--${item.type}`} />
                  {badgeLabels[item.type]}
                </span>

                {/* Date */}
                <span class="stream-item__date stream-item__date--desktop">
                  <FormattedDate date={item.date} />
                </span>

                {/* Title & Description */}
                <div class="stream-item__content">
                  <span class="stream-item__title">{item.title}</span>
                  {item.description && (
                    <p class="stream-item__desc">{item.description}</p>
                  )}
                </div>

                {/* Arrow Icon */}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="stream-item__arrow"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            )
          })}
        </div>
      </div>
    ))}
  </Container>
</Layout>

<script>
  function initStreamFilters() {
    const buttons = document.querySelectorAll<HTMLButtonElement>('.stream-filter-btn')
    const items = document.querySelectorAll<HTMLElement>('.stream-item')
    const monthGroups = document.querySelectorAll<HTMLElement>('.stream-month')

    function setFilter(filter: string) {
      // Update button styles
      for (const btn of buttons) {
        const isActive = btn.dataset.filter === filter
        btn.classList.toggle('stream-filter-btn--active', isActive)
      }

      // Show/hide items
      for (const item of items) {
        if (filter === 'all' || item.dataset.type === filter) {
          item.classList.remove('hidden')
        } else {
          item.classList.add('hidden')
        }
      }

      // Hide empty month groups
      for (const group of monthGroups) {
        const visibleItems = group.querySelectorAll('.stream-item:not(.hidden)')
        if (visibleItems.length === 0) {
          group.classList.add('hidden')
        } else {
          group.classList.remove('hidden')
        }
      }
    }

    for (const btn of buttons) {
      btn.addEventListener('click', () => {
        setFilter(btn.dataset.filter ?? 'all')
      })
    }
  }

  // Run on initial load and on Astro page transitions
  document.addEventListener('astro:page-load', initStreamFilters)
  initStreamFilters()
</script>

<style>
  /* Filter pills */
  .stream-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .stream-filter-btn {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    padding: 0.375rem 1rem;
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .stream-filter-btn:hover {
    border-color: var(--color-border-strong);
    color: var(--color-text);
  }

  .stream-filter-btn--active {
    background: var(--color-primary);
    color: #ffffff;
    border-color: var(--color-primary);
  }

  .stream-filter-btn--active:hover {
    color: #ffffff;
    filter: brightness(1.1);
  }

  /* Month groups */
  .stream-month {
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .stream-month {
      margin-bottom: 4rem;
    }
  }

  .stream-month__heading {
    display: flex;
    align-items: center;
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: -0.015em;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  @media (min-width: 640px) {
    .stream-month__heading {
      font-size: 1.5rem;
    }
  }

  .stream-month__bar {
    display: inline-block;
    width: 4px;
    height: 1.5rem;
    background: var(--color-primary);
    border-radius: var(--radius-full);
    margin-right: 0.75rem;
  }

  .stream-month__items {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  /* Stream items */
  .stream-item {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--color-card-glow);
    padding: 0.75rem 1rem;
  }

  .stream-item--link {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    transition: border-color var(--duration-normal) var(--ease-out),
                transform var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out);
  }

  .stream-item--link:hover {
    border-color: var(--color-border-strong);
    transform: translateY(-1px);
  }

  /* Badges with coloured dots */
  .stream-badge {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    border-radius: var(--radius-full);
    padding: 3px 10px;
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.6875rem;
    line-height: 1;
    font-weight: 500;
    white-space: nowrap;
  }

  .stream-badge__dot {
    width: 6px;
    height: 6px;
    border-radius: var(--radius-full);
    flex-shrink: 0;
  }

  /* Article = primary indigo */
  .stream-badge--article {
    background: var(--color-primary-muted);
    color: var(--color-primary);
    border: 1px solid var(--color-border-strong);
  }

  .stream-badge__dot--article {
    background: var(--color-primary);
  }

  /* Note = warm rose */
  .stream-badge--note {
    background: var(--color-warm-muted);
    color: var(--color-warm);
    border: 1px solid color-mix(in srgb, var(--color-warm) 30%, transparent);
  }

  .stream-badge__dot--note {
    background: var(--color-warm);
  }

  /* Short = success emerald */
  .stream-badge--short {
    background: color-mix(in srgb, var(--color-success) 8%, transparent);
    color: var(--color-success);
    border: 1px solid color-mix(in srgb, var(--color-success) 30%, transparent);
  }

  .stream-badge__dot--short {
    background: var(--color-success);
  }

  /* Talk = warm */
  .stream-badge--talk {
    background: color-mix(in srgb, #F59E0B 8%, transparent);
    color: #D97706;
    border: 1px solid color-mix(in srgb, #F59E0B 30%, transparent);
  }

  [data-theme="dark"] .stream-badge--talk {
    color: #FBBF24;
  }

  .stream-badge__dot--talk {
    background: #F59E0B;
  }

  /* Project = accent */
  .stream-badge--project {
    background: color-mix(in srgb, #8B5CF6 8%, transparent);
    color: #7C3AED;
    border: 1px solid color-mix(in srgb, #8B5CF6 30%, transparent);
  }

  [data-theme="dark"] .stream-badge--project {
    color: #A78BFA;
  }

  .stream-badge__dot--project {
    background: #8B5CF6;
  }

  .stream-item__date {
    flex-shrink: 0;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
  }

  .stream-item__date--desktop {
    width: 5rem;
    display: none;
  }

  @media (min-width: 640px) {
    .stream-item__date--desktop {
      display: block;
    }
  }

  .stream-item__content {
    min-width: 0;
    flex: 1;
  }

  .stream-item__title {
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .stream-item--link:hover .stream-item__title {
    color: var(--color-primary);
  }

  .stream-item__desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0.125rem 0 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .stream-item__arrow {
    flex-shrink: 0;
    width: 1rem;
    height: 1rem;
    color: var(--color-text-subtle);
    transition: transform var(--duration-normal) var(--ease-out),
                color var(--duration-fast) var(--ease-out);
  }

  .stream-item--link:hover .stream-item__arrow {
    transform: translateX(2px);
    color: var(--color-primary);
  }

  /* Note group styling */
  .stream-note-group__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .stream-note-group__view-all {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 0.125rem;
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .stream-note-group__view-all:hover {
    color: var(--color-text);
  }

  .stream-note-group__chevron {
    width: 0.75rem;
    height: 0.75rem;
  }

  .stream-note-group__list {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .stream-note-group__item {
    display: flex;
    align-items: start;
    gap: 0.5rem;
    padding: 0.375rem 0.5rem;
    border-radius: var(--radius-sm);
  }

  .stream-note-group__bullet {
    color: var(--color-text-subtle);
    line-height: 1.25;
  }

  .stream-note-group__link {
    flex: 1;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
    line-height: 1.25;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .stream-note-group__link:hover {
    color: var(--color-primary);
  }

  .stream-note-group__external {
    flex-shrink: 0;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .stream-note-group__external:hover {
    color: var(--color-text);
  }

  .stream-note-group__external-icon {
    width: 0.875rem;
    height: 0.875rem;
    margin-top: 0.125rem;
  }

  .stream-note-group__time {
    flex-shrink: 0;
    font-family: 'IBM Plex Mono', ui-monospace, monospace;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    line-height: 1.25;
  }

  /* Hidden utility */
  :global(.hidden) {
    display: none !important;
  }
</style>
