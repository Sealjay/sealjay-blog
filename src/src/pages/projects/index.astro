---
import Layout from '../../layouts/IndexLayout.astro'
import { getCollection } from 'astro:content'

const projects = await getCollection('project')

// Sort: featured first, then by date descending
const sortedProjects = [...projects].sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1
  if (!a.data.featured && b.data.featured) return 1
  return b.data.date.valueOf() - a.data.date.valueOf()
})

const statusColors: Record<string, { bg: string; text: string; dot: string }> = {
  Active: {
    bg: 'bg-emerald-50 dark:bg-emerald-900/20',
    text: 'text-emerald-700 dark:text-emerald-300',
    dot: 'bg-emerald-500',
  },
  Maintained: {
    bg: 'bg-blue-50 dark:bg-blue-900/20',
    text: 'text-blue-700 dark:text-blue-300',
    dot: 'bg-blue-500',
  },
  Archived: {
    bg: 'bg-zinc-100 dark:bg-zinc-800/70',
    text: 'text-zinc-700 dark:text-zinc-400',
    dot: 'bg-zinc-400',
  },
  Contribution: {
    bg: 'bg-accent-50 dark:bg-accent-900/20',
    text: 'text-accent-700 dark:text-accent-300',
    dot: 'bg-accent-500',
  },
}

const latestProject = sortedProjects.reduce((prev, current) =>
  prev.data.date > current.data.date ? prev : current
)
---

<Layout
  title="Projects"
  description="A selection of projects, contributions, and open source work - from international standards and foundation leadership to hands-on engineering."
  pubDateTime={new Date('1 March 2023')}
  updatedDate={latestProject.data.date}
>
  <div class="mx-auto max-w-5xl">
    <!-- Page Header -->
    <div class="mb-10 md:mb-16">
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 mb-4">
        <span class="text-gradient">Projects</span>
      </h1>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 max-w-3xl">
        A selection of projects, contributions, and open source work - from international standards and foundation leadership to hands-on engineering.
      </p>
    </div>

    <!-- Project Grid -->
    <div class="grid gap-6 grid-cols-1 lg:grid-cols-2">
      {sortedProjects.map((project) => {
        const colors = statusColors[project.data.status]
        return (
          <div class="group relative h-full flex flex-col rounded-xl overflow-hidden bg-white/90 dark:bg-zinc-800/70 backdrop-blur ring-1 ring-zinc-100 dark:ring-zinc-700/40 shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5">
            {/* Hero Image */}
            {project.data.heroImage && (
              <div class="aspect-w-16 aspect-h-9 bg-zinc-100 dark:bg-zinc-800 overflow-hidden">
                <img
                  src={project.data.heroImage}
                  alt=""
                  width="800"
                  height="450"
                  loading="lazy"
                  decoding="async"
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
              </div>
            )}

            {/* Featured Pin Badge */}
            {project.data.featured && (
              <div class="absolute top-3 right-3 z-10">
                <span class="inline-flex items-center gap-1 rounded-full bg-amber-50 dark:bg-amber-900/30 px-2.5 py-1 text-xs font-semibold text-amber-700 dark:text-amber-300 ring-1 ring-amber-200 dark:ring-amber-700/50 shadow-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  Featured
                </span>
              </div>
            )}

            {/* Card Body */}
            <div class="flex flex-col flex-grow p-5">
              {/* Status Badge */}
              <div class="mb-3">
                <span class={`inline-flex items-center gap-1.5 rounded-full px-2.5 py-0.5 text-xs font-medium ${colors.bg} ${colors.text}`}>
                  <span class={`h-1.5 w-1.5 rounded-full ${colors.dot}`} />
                  {project.data.status}
                </span>
              </div>

              {/* Title */}
              <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-100 mb-2">
                {project.data.title}
              </h3>

              {/* Description */}
              <p class="text-sm text-zinc-600 dark:text-zinc-400 line-clamp-3 mb-4">
                {project.data.description}
              </p>

              {/* Tech Stack Pills */}
              {project.data.techStack && project.data.techStack.length > 0 && (
                <div class="flex flex-wrap gap-1.5 mb-4">
                  {project.data.techStack.map((tech: string) => (
                    <span class="inline-flex items-center rounded-full bg-zinc-100 dark:bg-zinc-700/70 px-2 py-0.5 text-xs font-medium text-zinc-700 dark:text-zinc-300">
                      {tech}
                    </span>
                  ))}
                </div>
              )}

              {/* Star Count */}
              {project.data.stars != null && (
                <div class="flex items-center gap-1 text-sm text-zinc-500 dark:text-zinc-400 mb-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-amber-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span>{project.data.stars.toLocaleString()} stars</span>
                </div>
              )}

              {/* Spacer to push footer to bottom */}
              <div class="flex-grow" />
            </div>

            {/* Footer CTAs */}
            <div class="px-5 py-3 border-t border-zinc-100 dark:border-zinc-700/40">
              <div class="flex flex-wrap items-center gap-3">
                {/* GitHub Repo Link */}
                {project.data.repoUrl && (
                  <a
                    href={project.data.repoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1.5 text-sm font-medium text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
                    </svg>
                    GitHub
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>
                )}

                {/* Website / Demo Link */}
                {project.data.demoUrl && (
                  <a
                    href={project.data.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`inline-flex items-center gap-1.5 text-sm font-medium transition-colors ${project.data.repoUrl ? 'text-zinc-600 dark:text-zinc-400 hover:text-zinc-800 dark:hover:text-zinc-200' : 'text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300'}`}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    {project.data.repoUrl ? 'Demo' : 'Website'}
                    {!project.data.repoUrl && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                      </svg>
                    )}
                  </a>
                )}

                {/* Blog Post Link (optional) */}
                {project.data.blogPostSlug && (
                  <a
                    href={`/blog/${project.data.blogPostSlug}/`}
                    class="inline-flex items-center gap-1.5 text-sm font-medium text-zinc-600 dark:text-zinc-400 hover:text-zinc-800 dark:hover:text-zinc-200 transition-colors"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                    Blog Post
                  </a>
                )}
              </div>
            </div>
          </div>
        )
      })}
    </div>
  </div>

  <script>
    function initProjectTracking() {
      const footerLinks = document.querySelectorAll<HTMLAnchorElement>('.grid a[target="_blank"]')
      for (const link of footerLinks) {
        link.addEventListener('click', () => {
          if (typeof window.plausible === 'undefined') return
          const card = link.closest('.group')
          const project = card?.querySelector('h3')?.textContent?.trim() ?? 'Unknown'
          const text = link.textContent?.trim().toLowerCase() ?? ''
          let linkType = 'other'
          if (text.includes('github')) linkType = 'repo'
          else if (text.includes('demo') || text.includes('website')) linkType = 'demo'
          window.plausible('Project Click', { props: { project, linkType } })
        })
      }
    }

    document.addEventListener('astro:page-load', initProjectTracking)
    initProjectTracking()
  </script>
</Layout>
