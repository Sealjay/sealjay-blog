---
import Layout from '../../layouts/BaseLayout.astro'
import Container from '../../components/containers/Container.astro'
import PageHeader from '../../components/partials/PageHeader.astro'
import Badge from '../../components/partials/Badge.astro'
import { getCollection } from 'astro:content'

const projects = await getCollection('project')

// Sort: featured first, then by date descending
const sortedProjects = [...projects].sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1
  if (!a.data.featured && b.data.featured) return 1
  return b.data.date.valueOf() - a.data.date.valueOf()
})

const featuredProjects = sortedProjects.filter((p) => p.data.featured)
const otherProjects = sortedProjects.filter((p) => !p.data.featured)

const statusConfig: Record<string, { variant: 'success' | 'default' | 'subtle' | 'warm'; label: string }> = {
  Active: { variant: 'success', label: 'Active' },
  Maintained: { variant: 'default', label: 'Maintained' },
  Archived: { variant: 'subtle', label: 'Archived' },
  Contribution: { variant: 'warm', label: 'Contribution' },
}

const latestProject = sortedProjects.reduce((prev, current) =>
  prev.data.date > current.data.date ? prev : current
)
---

<Layout
  title="Projects"
  description="A selection of projects, contributions, and open source work - from international standards and foundation leadership to hands-on engineering."
  pubDateTime={new Date('1 March 2023')}
  updatedDate={latestProject.data.date}
>
  <Container>
    <PageHeader
      title="Projects"
      subtitle="open source, standards, and side projects"
      center={false}
    />

    {/* Featured Projects */}
    {featuredProjects.length > 0 && (
      <div class="projects-featured-grid">
        {featuredProjects.map((project) => {
          const status = statusConfig[project.data.status] ?? { variant: 'subtle' as const, label: project.data.status }
          return (
            <div class="project-card project-card--featured group">
              {/* Hero Image */}
              {project.data.heroImage && (
                <div class="project-card__image">
                  <img
                    src={project.data.heroImage}
                    alt=""
                    width="800"
                    height="450"
                    loading="lazy"
                    decoding="async"
                    class="project-card__img"
                  />
                </div>
              )}

              {/* Featured badge */}
              <div class="project-card__featured-badge">
                <svg xmlns="http://www.w3.org/2000/svg" class="project-card__star-icon" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                Featured
              </div>

              {/* Card Body */}
              <div class="project-card__body">
                <div class="project-card__status">
                  <Badge label={status.label} variant={status.variant} />
                </div>

                <h2 class="project-card__title font-heading">{project.data.title}</h2>

                <p class="project-card__desc">{project.data.description}</p>

                {/* Tech Stack */}
                {project.data.techStack && project.data.techStack.length > 0 && (
                  <div class="project-card__tech">
                    {project.data.techStack.map((tech: string) => (
                      <span class="project-card__tech-badge">{tech}</span>
                    ))}
                  </div>
                )}

                {/* Star Count */}
                {project.data.stars != null && (
                  <div class="project-card__stars">
                    <svg xmlns="http://www.w3.org/2000/svg" class="project-card__stars-icon" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <span>{project.data.stars.toLocaleString()} stars</span>
                  </div>
                )}

                <div class="flex-grow" />
              </div>

              {/* Footer CTAs */}
              <div class="project-card__footer">
                {project.data.repoUrl && (
                  <a
                    href={project.data.repoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="project-card__link project-card__link--primary"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="project-card__link-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
                    </svg>
                    GitHub
                    <svg xmlns="http://www.w3.org/2000/svg" class="project-card__arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>
                )}

                {project.data.demoUrl && (
                  <a
                    href={project.data.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class:list={[
                      'project-card__link',
                      project.data.repoUrl ? 'project-card__link--secondary' : 'project-card__link--primary',
                    ]}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="project-card__link-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    {project.data.repoUrl ? 'Demo' : 'Website'}
                  </a>
                )}

                {project.data.blogPostSlug && (
                  <a
                    href={`/blog/${project.data.blogPostSlug}/`}
                    class="project-card__link project-card__link--secondary"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="project-card__link-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                    Blog Post
                  </a>
                )}
              </div>
            </div>
          )
        })}
      </div>
    )}

    {/* Other Projects - Compact list */}
    {otherProjects.length > 0 && (
      <div class="projects-other">
        <h2 class="projects-other__heading font-heading">Other Projects</h2>
        <div class="projects-other__list">
          {otherProjects.map((project) => {
            const status = statusConfig[project.data.status] ?? { variant: 'subtle' as const, label: project.data.status }
            const projectUrl = project.data.repoUrl ?? project.data.demoUrl
            return (
              <div class="project-compact">
                <div class="project-compact__main">
                  <div class="project-compact__header">
                    <Badge label={status.label} variant={status.variant} />
                    <h3 class="project-compact__title font-heading">{project.data.title}</h3>
                  </div>
                  <p class="project-compact__desc">{project.data.description}</p>
                  {project.data.techStack && project.data.techStack.length > 0 && (
                    <div class="project-compact__tech">
                      {project.data.techStack.slice(0, 5).map((tech: string) => (
                        <span class="project-card__tech-badge">{tech}</span>
                      ))}
                    </div>
                  )}
                </div>
                {projectUrl && (
                  <a
                    href={projectUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="project-compact__link"
                    aria-label={`View ${project.data.title}`}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="project-compact__link-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>
                )}
              </div>
            )
          })}
        </div>
      </div>
    )}
  </Container>

  <script>
    function initProjectTracking() {
      const footerLinks = document.querySelectorAll<HTMLAnchorElement>('.project-card__footer a, .project-compact__link')
      for (const link of footerLinks) {
        link.addEventListener('click', () => {
          if (typeof window.plausible === 'undefined') return
          const card = link.closest('.project-card, .project-compact')
          const project = card?.querySelector('h2, h3')?.textContent?.trim() ?? 'Unknown'
          const text = link.textContent?.trim().toLowerCase() ?? ''
          let linkType = 'other'
          if (text.includes('github')) linkType = 'repo'
          else if (text.includes('demo') || text.includes('website')) linkType = 'demo'
          window.plausible('Project Click', { props: { project, linkType } })
        })
      }
    }

    document.addEventListener('astro:page-load', initProjectTracking)
    initProjectTracking()
  </script>
</Layout>

<style>
  /* Featured projects grid */
  .projects-featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .projects-featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Project card */
  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--color-card-glow);
    overflow: hidden;
    transition: border-color var(--duration-normal) var(--ease-out),
                transform var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out);
  }

  .project-card:hover {
    border-color: var(--color-border-strong);
    transform: translateY(-2px);
  }

  .project-card__image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-bg-alt);
  }

  .project-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }

  .project-card:hover .project-card__img {
    transform: scale(1.05);
  }

  .project-card__featured-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    z-index: 1;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    border-radius: var(--radius-full);
    padding: 0.25rem 0.625rem;
    font-family: var(--font-heading);
    font-size: 0.75rem;
    font-weight: 600;
    background: var(--color-warm-muted);
    color: var(--color-warm);
    border: 1px solid color-mix(in srgb, var(--color-warm) 30%, transparent);
    backdrop-filter: blur(8px);
  }

  .project-card__star-icon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .project-card__body {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 1.25rem;
  }

  .project-card__status {
    margin-bottom: 0.75rem;
  }

  .project-card__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.5rem;
  }

  .project-card__desc {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0 0 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-card__tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }

  .project-card__tech-badge {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    padding: 2px 8px;
    font-family: var(--font-heading);
    font-size: 0.6875rem;
    font-weight: 500;
    background: var(--color-bg-alt);
    color: var(--color-text-subtle);
    border: 1px solid var(--color-border);
  }

  .project-card__stars {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .project-card__stars-icon {
    width: 1rem;
    height: 1rem;
    color: var(--color-warm);
  }

  .project-card__footer {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    border-top: 1px solid var(--color-border);
  }

  .project-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .project-card__link--primary {
    color: var(--color-primary);
  }

  .project-card__link--primary:hover {
    color: var(--color-accent);
  }

  .project-card__link--secondary {
    color: var(--color-text-muted);
  }

  .project-card__link--secondary:hover {
    color: var(--color-text);
  }

  .project-card__link-icon {
    width: 1rem;
    height: 1rem;
  }

  .project-card__arrow {
    width: 0.75rem;
    height: 0.75rem;
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .project-card:hover .project-card__arrow {
    transform: translateX(2px);
  }

  /* Other projects section */
  .projects-other {
    margin-top: 1rem;
  }

  .projects-other__heading {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-subtle);
    margin-bottom: 1rem;
  }

  .projects-other__list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .project-compact {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--color-card-glow);
    transition: border-color var(--duration-normal) var(--ease-out),
                transform var(--duration-normal) var(--ease-out);
  }

  .project-compact:hover {
    border-color: var(--color-border-strong);
  }

  .project-compact__main {
    flex: 1;
    min-width: 0;
  }

  .project-compact__header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .project-compact__title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .project-compact__desc {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .project-compact__tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-top: 0.375rem;
  }

  .project-compact__link {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    border-radius: var(--radius-sm);
    color: var(--color-text-subtle);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out),
                background var(--duration-fast) var(--ease-out);
  }

  .project-compact__link:hover {
    color: var(--color-primary);
    background: var(--color-primary-muted);
  }

  .project-compact__link-icon {
    width: 1rem;
    height: 1rem;
  }
</style>
