---
type Props = {
  title: string
  linkUrl: string
  imageUrl: string
}

const { title, linkUrl, imageUrl } = Astro.props
---

<div class="social-embed">
  <a href={linkUrl} target="_blank" rel="noopener noreferrer" class="social-embed-link">
    <div class="social-embed-container">
      <div class="social-embed-content">
        <h3 class="social-embed-title">{title}</h3>
        <div class="social-embed-url">{new URL(linkUrl).hostname}</div>
      </div>
      {imageUrl && (
        <div class="social-embed-image-container">
          <img
            src={imageUrl}
            alt={title}
            class="social-embed-image"
            loading="lazy"
          />
        </div>
      )}
    </div>
  </a>
</div>

<style>
  .social-embed {
    width: 100%;
    max-width: 100%;
    margin: 1rem 0;
  }

  .social-embed-link {
    text-decoration: none;
    color: inherit;
    display: block;
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .social-embed-link:hover {
    transform: translateY(-2px);
  }

  .social-embed-link:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .social-embed-container {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    background-color: var(--color-surface);
  }

  @media (min-width: 640px) {
    .social-embed-container {
      flex-direction: row;
      align-items: center;
    }
  }

  .social-embed-content {
    padding: 1rem;
    flex: 1;
  }

  .social-embed-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--color-text);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .social-embed-url {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .social-embed-image-container {
    width: 100%;
    height: 180px;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .social-embed-image-container {
      width: 180px;
      min-width: 180px;
      height: 120px;
    }
  }

  .social-embed-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
