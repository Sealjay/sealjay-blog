---
type Props = {
  id: string
}

const { id } = Astro.props
---

<div class="gist-embed-container">
  <script is:inline src={`https://gist.github.com/${id}.js`}></script>
</div>

<style is:global>
  /* Gist container spacing */
  .gist-embed-container {
    margin: 1rem 0;
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  /* Make gists responsive on mobile */
  .gist-embed-container .gist {
    max-width: 100%;
    overflow-x: auto;
  }

  /* Adjust gist table layout for mobile */
  .gist-embed-container .gist .gist-file {
    border-radius: var(--radius-md);
    margin-bottom: 0;
    border-color: var(--color-border);
  }

  /* Improve code readability on mobile */
  .gist-embed-container .gist-data {
    max-width: 100%;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
  }

  /* Adjust font size for better mobile reading */
  .gist-embed-container .gist .highlight {
    font-size: 0.85rem;
  }

  /* Dark mode compatibility using data-theme */
  [data-theme='dark'] .gist-embed-container .gist .gist-file {
    border-color: var(--color-border);
  }

  [data-theme='dark'] .gist-embed-container .gist .gist-data {
    background-color: var(--color-bg-alt);
  }

  [data-theme='dark'] .gist-embed-container .gist .highlight {
    background-color: var(--color-bg-alt);
    color: var(--color-text);
  }

  [data-theme='dark'] .gist-embed-container .gist .blob-num,
  [data-theme='dark'] .gist-embed-container .gist .blob-code-inner,
  [data-theme='dark'] .gist-embed-container .gist .pl-s1,
  [data-theme='dark'] .gist-embed-container .gist .pl-ent {
    color: var(--color-text);
  }

  [data-theme='dark'] .gist-embed-container .gist .gist-meta {
    background-color: var(--color-surface);
    color: var(--color-text-muted);
  }

  [data-theme='dark'] .gist-embed-container .gist .gist-meta a {
    color: var(--color-primary);
  }

  /* Line number color for both light and dark modes */
  .gist-embed-container .gist .blob-num {
    width: 4%;
    min-width: 30px;
    padding-right: 10px;
  }

  /* Fix mobile horizontal scrolling */
  @media (max-width: 640px) {
    .gist-embed-container .gist .gist-file {
      margin: 0;
    }

    .gist-embed-container .gist .highlight {
      font-size: 0.75rem;
    }

    .gist-embed-container .gist .blob-num {
      padding-right: 6px;
    }
  }
</style>
