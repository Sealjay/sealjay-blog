---
type Props = {
  id: string;
  title?: string;
};

const { id, title = "YouTube video" } = Astro.props;

// Construct the YouTube embed URL with lazy loading
const embedUrl = `https://www.youtube.com/embed/${id}?loading=lazy`;
---

<div class="youtube-container">
  <iframe
    class="youtube-iframe"
    src={embedUrl}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    loading="lazy"
  >
  </iframe>
</div>

<style>
  .youtube-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    margin: 1.5rem 0;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  .youtube-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
    border-radius: 0.5rem;
  }
  
  /* Dark mode adjustments */
  :global(html.dark) .youtube-container {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
  }
</style>
