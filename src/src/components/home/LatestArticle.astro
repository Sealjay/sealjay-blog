---
import FormattedDate from '../partials/FormattedDate.astro'

interface Props {
  post: {
    slug: string
    data: {
      title: string
      description: string
      pubDateTime: Date
      heroImage?: string
      tags?: string[]
    }
    body?: string
  }
}

const { post } = Astro.props
---

<a href={`/blog/${post.slug}/`} class="bento-card group">
  <span class="bento-card__label">Latest Post</span>
  <p class="bento-card__title font-heading">{post.data.title}</p>
  <span class="bento-card__meta">
    <FormattedDate date={post.data.pubDateTime} class="bento-card__date" />
  </span>
</a>

<style>
  .bento-card {
    display: block;
    background: color-mix(in srgb, var(--color-surface) 80%, transparent);
    backdrop-filter: blur(12px);
    border: 1px solid var(--color-border);
    border-radius: 14px;
    padding: 16px 18px;
    box-shadow: var(--color-card-glow);
    text-decoration: none;
    cursor: pointer;
    transition: transform var(--duration-normal) var(--ease-out),
                border-color var(--duration-normal) var(--ease-out);
  }

  .bento-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-border-strong);
  }

  .bento-card:focus-visible {
    transform: translateY(-2px);
    border-color: var(--color-border-strong);
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .bento-card__label {
    display: block;
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-primary);
  }

  .bento-card__title {
    font-size: 15px;
    font-weight: 600;
    color: var(--color-text);
    margin: 5px 0 0;
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .bento-card__meta {
    display: block;
    margin-top: 4px;
  }

  .bento-card :global(.bento-card__date) {
    font-size: 11px;
    color: var(--color-text-subtle);
    line-height: 1;
  }
</style>
