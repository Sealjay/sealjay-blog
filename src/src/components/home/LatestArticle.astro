---
import FormattedDate from '../partials/FormattedDate.astro'
import { getOGImagePath } from '../../lib/og-image'

interface Props {
  post: {
    slug: string
    data: {
      title: string
      description: string
      pubDateTime: Date
      heroImage?: string
      tags?: string[]
    }
    body?: string
  }
}

const { post } = Astro.props
const hasHeroImage = post.data.heroImage && post.data.heroImage !== '/placeholder-hero.png'
const heroSrc = hasHeroImage ? post.data.heroImage : getOGImagePath(post.slug)
const firstTag = post.data.tags?.[0]

/* Estimate reading time: ~200 words per minute */
const wordCount = post.body ? post.body.split(/\s+/).length : 0
const readingTime = wordCount > 0 ? Math.max(1, Math.ceil(wordCount / 200)) : undefined
---

<div>
  <h3 class="section-heading">Latest Article</h3>
  <a
    href={`/blog/${post.slug}/`}
    class="latest-article-card group"
  >
    <div class="latest-article-image">
      {hasHeroImage ? (
        <img
          src={heroSrc}
          alt=""
          class="latest-article-img"
          loading="eager"
          fetchpriority="high"
        />
      ) : (
        <div class="latest-article-placeholder" />
      )}
    </div>
    <div class="latest-article-body">
      {firstTag && (
        <span class="latest-article-tag">{firstTag}</span>
      )}
      <h3 class="latest-article-title font-heading">
        {post.data.title}
      </h3>
      <div class="latest-article-meta">
        <FormattedDate date={post.data.pubDateTime} />
        {readingTime && (
          <>
            <span aria-hidden="true">&middot;</span>
            <span>{readingTime} min read</span>
          </>
        )}
      </div>
      <p class="latest-article-excerpt">
        {post.data.description}
      </p>
    </div>
  </a>
</div>

<style>
  .section-heading {
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-subtle);
    margin-bottom: 1rem;
  }

  .latest-article-card {
    display: block;
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    box-shadow: var(--color-card-glow);
    overflow: hidden;
    transition: transform var(--duration-normal) var(--ease-out),
                border-color var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out);
    text-decoration: none;
  }

  .latest-article-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-border-strong);
    box-shadow: var(--color-card-glow), 0 4px 20px rgba(79, 70, 229, 0.1);
  }

  .latest-article-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .latest-article-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }

  .latest-article-card:hover .latest-article-img {
    transform: scale(1.05);
  }

  .latest-article-placeholder {
    width: 100%;
    height: 100%;
    background: var(--gradient-hero);
  }

  .latest-article-body {
    padding: 1rem;
  }

  .latest-article-tag {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    background: var(--color-primary-muted);
    color: var(--color-primary);
    padding: 0.125rem 0.5rem;
    font-size: 0.6875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .latest-article-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color var(--duration-fast) var(--ease-out);
    margin: 0;
  }

  .latest-article-card:hover .latest-article-title {
    color: var(--color-primary);
  }

  .latest-article-meta {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    margin-top: 0.375rem;
  }

  .latest-article-excerpt {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-top: 0.375rem;
    margin-bottom: 0;
  }
</style>
