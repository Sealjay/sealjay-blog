---
import FormattedDate from '../partials/FormattedDate.astro'

interface SpeakingEntry {
  data: {
    title: string
    event: string
    eventType: string
    date: Date
    url: string
  }
}

interface Props {
  entries: SpeakingEntry[]
}

const { entries } = Astro.props
const now = new Date()
---

<div>
  <h3 class="section-heading">Recent Talks</h3>
  <div class="talks-list">
    {entries.map((entry) => {
      const isUpcoming = entry.data.date > now
      return (
        <a
          href={entry.data.url}
          target="_blank"
          rel="noopener noreferrer"
          class="talk-card group"
        >
          <div class="talk-content">
            <div class="talk-header">
              <span class="talk-event font-heading">{entry.data.event}</span>
              <div class="talk-badges">
                <span class="talk-type-badge">{entry.data.eventType}</span>
                {isUpcoming && (
                  <span class="talk-upcoming-badge">Upcoming</span>
                )}
              </div>
            </div>
            <span class="talk-title">{entry.data.title}</span>
            <span class="talk-date">
              <FormattedDate date={entry.data.date} />
            </span>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="talk-arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
          <span class="sr-only">(opens in new tab)</span>
        </a>
      )
    })}
  </div>
  <a href="/speaking" class="talks-view-all">
    All speaking
    <svg xmlns="http://www.w3.org/2000/svg" class="talks-view-all-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </a>
</div>

<style>
  .section-heading {
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-subtle);
    margin-bottom: 1rem;
  }

  .talks-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .talk-card {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    border-radius: var(--radius-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    box-shadow: var(--color-card-glow);
    padding: 0.625rem 0.75rem;
    text-decoration: none;
    transition: transform var(--duration-normal) var(--ease-out),
                border-color var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out);
  }

  .talk-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-border-strong);
    box-shadow: var(--color-card-glow), 0 4px 20px rgba(79, 70, 229, 0.1);
  }

  .talk-content {
    min-width: 0;
    flex: 1;
  }

  .talk-header {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 0.25rem;
  }

  .talk-event {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    transition: color var(--duration-fast) var(--ease-out);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .talk-card:hover .talk-event {
    color: var(--color-primary);
  }

  .talk-badges {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .talk-type-badge {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    background: var(--color-primary-muted);
    color: var(--color-primary);
    padding: 0.0625rem 0.5rem;
    font-size: 0.625rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .talk-upcoming-badge {
    display: inline-flex;
    align-items: center;
    border-radius: var(--radius-full);
    background: var(--color-warm-muted);
    color: var(--color-warm);
    padding: 0.0625rem 0.5rem;
    font-size: 0.625rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .talk-title {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .talk-date {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    margin-top: 0.125rem;
  }

  .talk-arrow {
    flex-shrink: 0;
    width: 1rem;
    height: 1rem;
    margin-top: 0.25rem;
    color: var(--color-text-subtle);
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .talk-card:hover .talk-arrow {
    transform: translateX(2px);
  }

  .talks-view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .talks-view-all:hover {
    color: var(--color-text);
  }

  .talks-view-all-icon {
    width: 1rem;
    height: 1rem;
  }
</style>
