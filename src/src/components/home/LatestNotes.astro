---
import FormattedDate from '../partials/FormattedDate.astro'

interface NotePreview {
  description?: string
  title?: string
  time: string
  url: string
}

interface Props {
  date: Date
  dayUrl: string
  daySummary?: string
  noteCount: number
  previews: NotePreview[]
}

const { date, dayUrl, daySummary, noteCount, previews } = Astro.props
const overflow = noteCount - previews.length

/* Truncate content to 140 chars */
function truncate(text: string, max = 140): string {
  if (text.length <= max) return text
  return `${text.slice(0, max).trimEnd()}\u2026`
}
---

<div class="notes-strip-wrapper">
  <div class="notes-strip-header">
    <span class="notes-badge">Notes</span>
    <span class="notes-meta">
      <FormattedDate date={date} /> &middot; {noteCount} {noteCount === 1 ? 'note' : 'notes'}
    </span>
    <a href="/notes" class="notes-view-all">
      View all notes
      <svg xmlns="http://www.w3.org/2000/svg" class="notes-view-all-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>

  {daySummary && (
    <p class="notes-summary">{daySummary}</p>
  )}

  <div class="notes-scroll-container">
    {previews.map((note) => {
      const content = note.description || note.title || 'Note'
      return (
        <a href={note.url} class="note-card">
          <span class="note-card__time">{note.time}</span>
          <span class="note-card__content">{truncate(content)}</span>
        </a>
      )
    })}
    {overflow > 0 && (
      <a href={dayUrl} class="note-card note-card--overflow">
        <span class="note-card__content">and {overflow} more &rarr;</span>
      </a>
    )}
  </div>
</div>

<style>
  .notes-strip-wrapper {
    position: relative;
  }

  .notes-strip-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .notes-badge {
    display: inline-flex;
    align-items: center;
    flex-shrink: 0;
    border-radius: var(--radius-full);
    background: var(--color-primary-muted);
    color: var(--color-primary);
    padding: 0.125rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .notes-meta {
    font-size: 0.75rem;
    color: var(--color-text-subtle);
  }

  .notes-view-all {
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .notes-view-all:hover {
    color: var(--color-text);
  }

  .notes-view-all-icon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .notes-summary {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0 0 0.75rem;
  }

  /* Horizontal scroll strip (desktop) */
  .notes-scroll-container {
    position: relative;
    display: flex;
    gap: var(--space-md);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    padding-bottom: 0.25rem;
  }

  .notes-scroll-container::-webkit-scrollbar {
    display: none;
  }

  /* Fade gradient on the right edge */
  .notes-strip-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 60px;
    background: linear-gradient(to right, transparent, var(--color-bg-alt));
    pointer-events: none;
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
  }

  .note-card {
    min-width: 280px;
    max-width: 320px;
    flex-shrink: 0;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 0.75rem 1rem;
    text-decoration: none;
    transition: border-color var(--duration-fast) var(--ease-out),
                box-shadow var(--duration-fast) var(--ease-out);
  }

  .note-card:hover {
    border-color: var(--color-border-strong);
    box-shadow: var(--color-card-glow);
  }

  .note-card--overflow {
    min-width: auto;
    justify-content: center;
    align-items: center;
  }

  .note-card__time {
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    font-variant-numeric: tabular-nums;
  }

  .note-card__content {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  .note-card--overflow .note-card__content {
    font-size: 0.75rem;
    color: var(--color-primary);
    display: block;
    overflow: visible;
    -webkit-line-clamp: unset;
  }

  /* Mobile: stack vertically */
  @media (max-width: 767px) {
    .notes-scroll-container {
      flex-direction: column;
      overflow-x: visible;
      scroll-snap-type: none;
    }

    .note-card {
      min-width: 0;
      max-width: 100%;
    }

    .notes-strip-wrapper::after {
      display: none;
    }
  }
</style>
