---
import FormattedDate from '../partials/FormattedDate.astro'

interface NotePreview {
  description?: string
  title?: string
  time: string
  url: string
}

interface Props {
  date: Date
  dayUrl: string
  daySummary?: string
  noteCount: number
  previews: NotePreview[]
}

const { date, dayUrl, daySummary, noteCount, previews } = Astro.props
const overflow = noteCount - previews.length

/* Truncate content to 140 chars */
function truncate(text: string, max = 140): string {
  if (text.length <= max) return text
  return `${text.slice(0, max).trimEnd()}\u2026`
}
---

<div class="notes-card">
  <div class="notes-header">
    <span class="notes-badge">Notes</span>
    <span class="notes-meta">
      <FormattedDate date={date} /> &middot; {noteCount} {noteCount === 1 ? 'note' : 'notes'}
    </span>
    <a href="/notes" class="notes-view-all">
      View all notes
      <svg xmlns="http://www.w3.org/2000/svg" class="notes-view-all-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>

  {daySummary && (
    <p class="notes-summary">{daySummary}</p>
  )}

  <div class="notes-list">
    {previews.map((note) => {
      const content = note.description || note.title || 'Note'
      return (
        <a href={note.url} class="note-row">
          <span class="note-content">{truncate(content)}</span>
          <span class="note-time">{note.time}</span>
        </a>
      )
    })}
    {overflow > 0 && (
      <a href={dayUrl} class="note-overflow">
        and {overflow} more &rarr;
      </a>
    )}
  </div>
</div>

<style>
  .notes-card {
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    box-shadow: var(--color-card-glow);
    padding: 1rem 1.25rem;
  }

  .notes-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.625rem;
    flex-wrap: wrap;
  }

  .notes-badge {
    display: inline-flex;
    align-items: center;
    flex-shrink: 0;
    border-radius: var(--radius-full);
    background: var(--color-primary-muted);
    color: var(--color-primary);
    padding: 0.125rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .notes-meta {
    font-size: 0.75rem;
    color: var(--color-text-subtle);
  }

  .notes-view-all {
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .notes-view-all:hover {
    color: var(--color-text);
  }

  .notes-view-all-icon {
    width: 0.75rem;
    height: 0.75rem;
  }

  .notes-summary {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0 0 0.5rem;
  }

  .notes-list {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .note-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: var(--radius-sm);
    padding: 0.25rem 0.5rem;
    margin: 0 -0.25rem;
    text-decoration: none;
    transition: background var(--duration-fast) var(--ease-out);
  }

  .note-row:hover {
    background: var(--color-surface-hover);
  }

  .note-content {
    flex: 1;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
  }

  .note-time {
    flex-shrink: 0;
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    font-variant-numeric: tabular-nums;
    line-height: 1.4;
  }

  .note-overflow {
    display: block;
    padding: 0.25rem 0.5rem;
    margin: 0 -0.25rem;
    font-size: 0.75rem;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .note-overflow:hover {
    color: var(--color-text);
  }
</style>
