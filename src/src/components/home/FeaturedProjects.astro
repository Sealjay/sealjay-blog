---
interface ProjectEntry {
  data: {
    title: string
    description: string
    status: string
    techStack: string[]
    repoUrl?: string
    demoUrl?: string
    featured: boolean
  }
}

interface Props {
  projects: ProjectEntry[]
}

const { projects } = Astro.props

/* Map status to a simple emoji/icon */
const statusEmoji: Record<string, string> = {
  Active: '\u{1F7E2}',
  Maintained: '\u{1F535}',
  Archived: '\u{26AA}',
  Contribution: '\u{1F7E3}',
}
---

<div>
  <h3 class="section-heading">Featured Projects</h3>
  <div class="projects-grid">
    {projects.map((project) => {
      const projectUrl = project.data.repoUrl ?? project.data.demoUrl ?? '/projects'
      const isExternal = !!(project.data.repoUrl ?? project.data.demoUrl)
      const emoji = statusEmoji[project.data.status] ?? '\u{1F4E6}'
      return (
        <a
          href={projectUrl}
          target={isExternal ? '_blank' : undefined}
          rel={isExternal ? 'noopener noreferrer' : undefined}
          class="project-card"
        >
          <span class="project-emoji" aria-hidden="true">{emoji}</span>
          <h3 class="project-title font-heading">{project.data.title}</h3>
          <p class="project-desc">{project.data.description}</p>
          {isExternal && <span class="sr-only">(opens in new tab)</span>}
        </a>
      )
    })}
  </div>
  <a href="/projects" class="projects-view-all">
    All projects
    <svg xmlns="http://www.w3.org/2000/svg" class="projects-view-all-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </a>
</div>

<style>
  .section-heading {
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-subtle);
    margin-bottom: 1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-card {
    display: block;
    border-radius: var(--radius-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    box-shadow: var(--color-card-glow);
    padding: 0.75rem;
    text-decoration: none;
    transition: transform var(--duration-normal) var(--ease-out),
                border-color var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out);
  }

  .project-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-border-strong);
    box-shadow: var(--color-card-glow), 0 4px 20px rgba(79, 70, 229, 0.1);
  }

  .project-emoji {
    display: block;
    font-size: 1.25rem;
    margin-bottom: 0.375rem;
  }

  .project-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .project-card:hover .project-title {
    color: var(--color-primary);
  }

  .project-desc {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    line-height: 1.4;
    margin: 0.25rem 0 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .projects-view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .projects-view-all:hover {
    color: var(--color-text);
  }

  .projects-view-all-icon {
    width: 1rem;
    height: 1rem;
  }
</style>
