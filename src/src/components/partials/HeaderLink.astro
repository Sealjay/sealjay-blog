---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a
  href={href}
  class:list={[
    "relative block px-2 py-2 sm:px-3 transition focus:outline-none focus:ring-2 focus:ring-teal-500/50 rounded-md",
    { "text-teal-500 dark:text-teal-400 hover:text-teal-800": isActive },
    { "hover:text-teal-500 dark:hover:text-teal-400": !isActive },
  ]}
  aria-current={isActive ? "page" : undefined}
>
  <slot />
  {isActive && (
    <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-teal-500/0 via-teal-500/40 to-teal-500/0 dark:from-teal-400/0 dark:via-teal-400/40 dark:to-teal-400/0"></span>
  )}
</a>
