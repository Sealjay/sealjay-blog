---
interface Props {
  date: Date
  class?: string
}

const { date, class: className } = Astro.props
---

<time
  datetime={date.toISOString()}
  class:list={['formatted-date', className]}
>
  {
    date.toLocaleDateString('en-GB', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>

<style>
  .formatted-date {
    font-size: 0.875rem;
    line-height: 1.65;
    color: var(--color-text-muted);
  }
</style>
