---
import Bluesky from "../socialicons/Bluesky.astro";
import GitHub from "../socialicons/GitHub.astro";
import LinkedIn from "../socialicons/LinkedIn.astro";
import X from "../socialicons/X.astro";
---

<div class="flex flex-wrap gap-4">
  <a href="https://github.com/sealjay"
     data-social="GitHub"
     class="social-link u-url group flex items-center gap-3 rounded-full bg-white/50 dark:bg-zinc-800/50 px-3.5 py-2.5 text-sm font-medium text-zinc-800 dark:text-zinc-300 shadow-sm ring-1 ring-zinc-200/70 dark:ring-zinc-700/40 transition-all duration-200 hover:shadow-md hover:ring-accent-200 dark:hover:ring-accent-800/40 hover:bg-white dark:hover:bg-zinc-800"
     rel="me">
    <span class="transform transition-transform duration-300 group-hover:-rotate-12">
      <GitHub />
    </span>
    <span>GitHub</span>
  </a>

  <a href="https://bsky.app/profile/sealjay.com"
     data-social="Bluesky"
     class="social-link u-url group flex items-center gap-3 rounded-full bg-white/50 dark:bg-zinc-800/50 px-3.5 py-2.5 text-sm font-medium text-zinc-800 dark:text-zinc-300 shadow-sm ring-1 ring-zinc-200/70 dark:ring-zinc-700/40 transition-all duration-200 hover:shadow-md hover:ring-accent-200 dark:hover:ring-accent-800/40 hover:bg-white dark:hover:bg-zinc-800"
     rel="me">
    <span class="transform transition-transform duration-300 group-hover:-rotate-12">
      <Bluesky />
    </span>
    <span>Bluesky</span>
  </a>

  <a href="https://x.com/sealjay_clj"
     data-social="X"
     class="social-link u-url group flex items-center gap-3 rounded-full bg-white/50 dark:bg-zinc-800/50 px-3.5 py-2.5 text-sm font-medium text-zinc-800 dark:text-zinc-300 shadow-sm ring-1 ring-zinc-200/70 dark:ring-zinc-700/40 transition-all duration-200 hover:shadow-md hover:ring-accent-200 dark:hover:ring-accent-800/40 hover:bg-white dark:hover:bg-zinc-800"
     rel="me">
    <span class="transform transition-transform duration-300 group-hover:-rotate-12">
      <X />
    </span>
    <span>X</span>
  </a>

  <a href="https://uk.linkedin.com/in/chrislloydjones"
     data-social="LinkedIn"
     class="social-link u-url group flex items-center gap-3 rounded-full bg-white/50 dark:bg-zinc-800/50 px-3.5 py-2.5 text-sm font-medium text-zinc-800 dark:text-zinc-300 shadow-sm ring-1 ring-zinc-200/70 dark:ring-zinc-700/40 transition-all duration-200 hover:shadow-md hover:ring-accent-200 dark:hover:ring-accent-800/40 hover:bg-white dark:hover:bg-zinc-800"
     rel="me">
    <span class="transform transition-transform duration-300 group-hover:-rotate-12">
      <LinkedIn />
    </span>
    <span>LinkedIn</span>
  </a>

  <a href="https://fosstodon.org/@sealjay"
     data-social="Mastodon"
     class="social-link u-url group flex items-center gap-3 rounded-full bg-white/50 dark:bg-zinc-800/50 px-3.5 py-2.5 text-sm font-medium text-zinc-800 dark:text-zinc-300 shadow-sm ring-1 ring-zinc-200/70 dark:ring-zinc-700/40 transition-all duration-200 hover:shadow-md hover:ring-accent-200 dark:hover:ring-accent-800/40 hover:bg-white dark:hover:bg-zinc-800"
     rel="me">
    <span class="transform transition-transform duration-300 group-hover:-rotate-12">
      <svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5" fill="currentColor">
        <path d="M23.268 5.313c-.35-2.578-2.617-4.61-5.304-5.004C17.51.242 15.792 0 11.813 0h-.03c-3.98 0-4.835.242-5.288.309C3.882.692 1.496 2.518.917 5.127.64 6.412.61 7.837.661 9.143c.074 1.874.088 3.745.26 5.611.118 1.24.325 2.47.62 3.68.55 2.237 2.777 4.098 4.96 4.857 2.336.792 4.849.923 7.256.38.265-.061.527-.132.786-.213.585-.184 1.27-.39 1.774-.753a.057.057 0 0 0 .023-.043v-1.809a.052.052 0 0 0-.02-.041.053.053 0 0 0-.046-.01 20.282 20.282 0 0 1-4.709.545c-2.73 0-3.463-1.284-3.674-1.818a5.593 5.593 0 0 1-.319-1.433.053.053 0 0 1 .066-.054 19.648 19.648 0 0 0 4.636.536c.392 0 .785 0 1.18-.012 2.688-.076 5.533-.399 5.81-3.113.012-.107.018-1.327.018-1.433 0-1.38.494-3.818-.072-5.487zM19.16 13.38c0 1.197-.01 2.394-.01 3.591 0 .79-.304 1.204-.976 1.438-.692.242-1.478.36-2.294.36-1.536 0-2.07-.677-2.07-1.364 0-.957.697-1.474 2.04-1.616l.63-.057c.534-.048.816-.202.816-.753V9.09c0-.944-.184-1.705-1.166-1.705-.937 0-1.264.757-1.264 1.705v3.126H12.38V9.09c0-.944-.184-1.705-1.166-1.705-.937 0-1.264.757-1.264 1.705v3.614c0 .55.282.705.816.753l.63.057c1.343.142 2.04.659 2.04 1.616 0 .687-.534 1.364-2.07 1.364-.816 0-1.602-.118-2.294-.36-.672-.234-.976-.648-.976-1.438 0-1.197-.01-2.394-.01-3.591 0-2.79 1.518-4.407 3.89-4.407 1.202 0 2.11.48 2.707 1.359a.053.053 0 0 0 .088 0c.596-.88 1.505-1.36 2.707-1.36 2.372 0 3.89 1.618 3.89 4.408z"/>
      </svg>
    </span>
    <span>Mastodon</span>
  </a>
</div>

<script>
  function initSocialTracking() {
    const links = document.querySelectorAll<HTMLAnchorElement>('.social-link')
    for (const link of links) {
      link.addEventListener('click', () => {
        if (typeof window.plausible !== 'undefined') {
          window.plausible('Social Click', { props: { platform: link.dataset.social ?? 'Unknown' } })
        }
      })
    }
  }

  document.addEventListener('astro:page-load', initSocialTracking)
  initSocialTracking()
</script>
