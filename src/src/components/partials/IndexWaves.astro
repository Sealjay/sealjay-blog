<style>
  .index-waves {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    pointer-events: none;
  }

  .index-waves__svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 200%;
    height: 100%;
  }

  .index-waves__svg--1 {
    fill: var(--color-primary);
    opacity: 0.07;
    animation: wave-drift-1 25s linear infinite;
  }

  .index-waves__svg--2 {
    fill: var(--color-accent);
    opacity: 0.05;
    animation: wave-drift-2 30s linear infinite;
  }

  @keyframes wave-drift-1 {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes wave-drift-2 {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .index-waves__svg {
      animation-play-state: paused;
    }
  }
</style>
