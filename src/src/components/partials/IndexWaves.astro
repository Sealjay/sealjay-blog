---
// Modern color palette with accent colors
const colors = {
  accent: {
    light: '#e0e7ff', // accent-100
    medium: '#a5b4fc', // accent-300
    dark: '#6366f1',   // accent-500
  },
  zinc: {
    light: '#f4f4f5',  // zinc-100
    medium: '#e4e4e7', // zinc-200
    dark: '#d4d4d8',   // zinc-300
  }
