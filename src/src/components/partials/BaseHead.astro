---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../../styles/global.css";
import avatarImage from '../../assets/chris/avatar.jpg'

export interface Props {
  title: string;
  description: string;
  image?: string;
  ogType?: "website" | "article";
  pubDate?: Date;
  tags?: string[];
  noindex?: boolean;
}

const SITE_SUFFIX = ' | Chris Lloyd-Jones, Sealjay'

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const defaultImage = avatarImage.src
const { title: rawTitle, description, image = defaultImage, ogType = "website", pubDate, tags, noindex } = Astro.props;

// Auto-append site suffix unless the title already contains the brand name
const title = rawTitle.includes('Chris Lloyd-Jones') ? rawTitle : rawTitle + SITE_SUFFIX;

// Build JSON-LD in frontmatter so we can use dynamic avatar URL
const avatarAbsoluteUrl = new URL(defaultImage, 'https://sealjay.com').href

const personJsonLd = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': 'Chris Lloyd-Jones',
  'alternateName': 'Sealjay',
  'url': 'https://sealjay.com',
  'image': avatarAbsoluteUrl,
  'jobTitle': 'VP, AI Consulting Transformation',
  'worksFor': {
    '@type': 'Organization',
    'name': 'Kyndryl',
  },
  'sameAs': [
    'https://github.com/sealjay',
    'https://bsky.app/profile/sealjay.com',
    'https://x.com/sealjay_clj',
    'https://uk.linkedin.com/in/chrislloydjones',
    'https://fosstodon.org/@sealjay',
    'https://orcid.org/0000-0001-7995-7865',
  ],
  'knowsAbout': [
    'Artificial Intelligence',
    'Agentic AI',
    'AI Governance',
    'Open Source',
    'Green Software',
    'Sustainability',
  ],
})

const websiteJsonLd = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  'name': 'Sealjay',
  'url': 'https://sealjay.com',
  'potentialAction': {
    '@type': 'SearchAction',
    'target': {
      '@type': 'EntryPoint',
      'urlTemplate': 'https://sealjay.com/search?q={search_term_string}',
    },
    'query-input': 'required name=search_term_string',
  },
})
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
<meta name="theme-color" content="#F8F9FC" media="(prefers-color-scheme: light)" />
<meta name="theme-color" content="#0C0A1D" media="(prefers-color-scheme: dark)" />
<link rel="icon" type="image/png" href="/favicon.png" />
<link rel="manifest" href="/site.webmanifest" />
<meta name="generator" content={Astro.generator} />

<!-- Dark mode: apply before CSS to prevent flash of wrong theme -->
<script is:inline>
  (function() {
    var saved = localStorage.getItem('theme');
    var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    var theme = saved || (prefersDark ? 'dark' : 'light');
    document.documentElement.setAttribute('data-theme', theme);
  })();
</script>

<!-- Modern Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preload" href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;500;600;700;800&family=Source+Serif+4:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=IBM+Plex+Mono:wght@400;500&display=swap" as="style" />
<link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;500;600;700;800&family=Source+Serif+4:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet" />

<!-- Mobile Web App -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="format-detection" content="telephone=no" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />
{noindex && <meta name="robots" content="noindex, follow" />}

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

{ogType === "article" && pubDate && (
  <>
    <meta property="article:published_time" content={pubDate.toISOString()} />
    <meta property="article:author" content="Chris Lloyd-Jones" />
  </>
)}
{ogType === "article" && tags && tags.length > 0 && (
  tags.map((tag: string) => (
    <meta property="article:tag" content={tag} />
  ))
)}

<!-- X (formerly Twitter) -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.url)} />

<!-- Identity verification links -->
<link href="https://fosstodon.org/@sealjay" rel="me" />
<link href="https://bsky.app/profile/sealjay.com" rel="me" />
<link href="https://github.com/sealjay" rel="me" />
<link href="https://x.com/sealjay_clj" rel="me" />

<!-- Webmention endpoint (webmention.io) -->
<link rel="webmention" href="https://webmention.io/sealjay.com/webmention" />
<link rel="pingback" href="https://webmention.io/sealjay.com/xmlrpc" />

<!-- Bridgy Fed: Bluesky fediverse bridge verification -->
<link href="https://bsky.brid.gy/ap/did:plc:lamiqq7bkfqygjzdbdz673q3" rel="me" />

<!-- Feed discovery -->
<link rel="alternate" type="application/rss+xml" title="Sealjay RSS Feed" href="/rss.xml" />
<link rel="alternate" type="application/feed+json" title="Sealjay JSON Feed" href="/feed.json" />

<!-- Bridgy Fed: ActivityPub discovery for fediverse search -->
<link rel="alternate" type="application/activity+json" href={`https://fed.brid.gy/r/${canonicalURL}`} />

<!-- JSON-LD Structured Data (Person) -->
<script type="application/ld+json" set:html={personJsonLd} />

<!-- JSON-LD Structured Data (WebSite + SearchAction) -->
<script type="application/ld+json" set:html={websiteJsonLd} />

<!-- Plausible -->
<script
  is:inline
  defer
  data-domain="sealjay.com"
  src="https://plausible.io/js/plausible.outbound-links.file-downloads.js"
></script>

<!-- Added for mobile optimization -->
<style is:inline>
  @media (max-width: 640px) {
    html {
      touch-action: manipulation;
      -webkit-text-size-adjust: 100%;
    }
    
    /* Custom CSS variable for mobile viewport heights */
    :root {
      --vh: 1vh;
    }
    
    /* Use this for elements that need true mobile viewport height */
    .h-mobile-screen {
      height: calc(100 * var(--vh));
    }
  }
</style>
