---
import { SITE_NAV } from "../../consts";
import Container from "../containers/Container.astro";
---

<footer class="mt-32">
  <Container>
    <div class="border-t border-zinc-100 pt-10 pb-16 dark:border-zinc-700/40">
      <div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
        <div
          class="flex gap-6 text-sm font-medium text-zinc-800 dark:text-zinc-200"
        >
          {
            SITE_NAV.map((navitem) => (
              <>
                <a
                  href={navitem.path}
                  class="transition hover:text-teal-500 dark:hover:text-teal-400"
                >
                  {navitem.name}
                </a>
              </>
            ))
          }
        </div>
        <p class="text-sm text-zinc-400 dark:text-zinc-500">
          &copy; 2018-{new Date().getFullYear()} Chris Lloyd-Jones, aka Sealjay&#174;.
          All rights reserved.
        </p>
      </div>
    </div>
  </Container>
</footer>
