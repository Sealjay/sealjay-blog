---
const {
    url = "https://example.com",
    cta = "Want to learn more?",
    blTextColor='text-gray-700',
} = Astro.props;
---

<div class="flex flex-col bg-white border rounded-md shadow-sm overflow-hidden">
    <div class="px-4 py-2 bg-gray-200 text-gray-600 text-sm font-medium">
        <slot name="title"></slot>
    </div>
    <div class="p-4">
        <slot/>
    </div>
    <div class="flex justify-between p-4 border-t border-gray-200">
        <div class={`${blTextColor} text-xs items-center inline-flex`}>
            <slot name="bottom-left"></slot>
        </div>
        <div>
            <a href={url} target="_blank" class="inline-flex items-center text-xs text-gray-800 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                {cta} &rarr;
            </a>
        </div>
    </div>
</div>
