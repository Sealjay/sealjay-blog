---
const {
    url = "https://example.com",
    cta = "Want to learn more?",
    blTextColor = 'text-zinc-600',
    hasHeaderBg = false,
    compactHeader = false,
    contentGap = "gap-3", // Default to smaller gap
} = Astro.props;
---

<div class="group relative flex h-full flex-col overflow-hidden rounded-lg bg-white/50 ring-1 ring-zinc-100 backdrop-blur transition duration-200 hover:bg-white/80 hover:shadow-md dark:bg-zinc-800/50 dark:ring-zinc-300/10 dark:hover:bg-zinc-800/80">
    <div class:list={[
        "flex items-center text-sm font-medium text-zinc-900 dark:text-zinc-100",
        compactHeader ? "min-h-[36px] px-3 py-1.5" : "min-h-[44px] px-3 py-2",
        { "bg-zinc-50 dark:bg-zinc-800/50": hasHeaderBg }
    ]}>
        <slot name="title" />
    </div>
    <div class={`flex flex-grow flex-col ${contentGap} px-3 py-2`}>
        <slot />
    </div>
    <div class="mt-auto flex items-center justify-between border-t border-zinc-100 px-3 py-2 dark:border-zinc-700/40">
        <div class={`${blTextColor} text-xs dark:text-zinc-400`}>
            <slot name="bottom-left" />
        </div>
        <div>
            <a 
                href={url} 
                target="_blank" 
                class="inline-flex items-center text-xs font-medium text-teal-500 transition hover:text-teal-600 dark:text-teal-400 dark:hover:text-teal-300 py-1 px-2 -mr-1 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500/50"
            >
                {cta} <span class="ml-1 transition-transform group-hover:translate-x-0.5">â†’</span>
            </a>
        </div>
    </div>
</div>
