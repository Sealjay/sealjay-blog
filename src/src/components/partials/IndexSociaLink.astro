---
interface Props {
  href: string
  text: string
  class?: string
}

const { href, text, class: className } = Astro.props
---

<li class:list={['flex mt-4', className]}>
  <a
    href={href}
    class="social-link-item"
    target="_blank"
    rel="noopener noreferrer"
  >
    <div class="social-link-item__icon">
      <slot />
    </div>
    <span class="ml-3 sm:ml-4">{text}</span>
  </a>
</li>

<style>
  .social-link-item {
    display: flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    padding-block: 0.25rem;
    border-radius: 0.375rem;
    transition: color 150ms;
  }

  .social-link-item:hover {
    color: var(--color-primary);
  }

  .social-link-item:focus {
    outline: none;
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--color-primary) 50%, transparent);
  }

  .social-link-item__icon {
    width: 1.5rem;
    height: 1.5rem;
    flex-shrink: 0;
    color: var(--color-text-muted);
    transition: color 150ms;
  }

  .social-link-item:hover .social-link-item__icon {
    color: var(--color-primary);
  }
</style>
