---
interface Props {
  bg?: 'default' | 'alt'
  id?: string
  ariaLabel?: string
  class?: string
}

const { bg = 'default', id, ariaLabel, class: className } = Astro.props

const bgStyle = bg === 'alt' ? 'background: var(--color-bg-alt)' : 'background: var(--color-bg)'
---

<section
  style={bgStyle}
  class:list={['section-padding', className]}
  {...id ? { id } : {}}
  {...ariaLabel ? { 'aria-label': ariaLabel } : {}}
>
  <slot />
</section>

<style>
  .section-padding {
    padding-top: var(--space-lg);
    padding-bottom: var(--space-lg);
  }

  @media (min-width: 768px) {
    .section-padding {
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xl);
    }
  }
</style>
